<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_510_FilmstripPoster">
		<control type="group">
			<visible>Control.IsVisible(510)</visible>
			<!-- List -->
			<control type="fixedlist" id="510">
				<left>-480</left>
				<width>2400</width>
				<height>1080</height>
				<onleft>510</onleft>
				<onright>510</onright>
				<onup>3000</onup>
				<ondown>60</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<focusposition>1</focusposition>
				<orientation>horizontal</orientation>
				<viewtype label="31112">list</viewtype>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)</visible>
				<itemlayout height="1080" width="720">
					<control type="image">
						<width>720</width>
						<height>1080</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>720</width>
						<height>1080</height>
						<texture>views/overlay_50.png</texture>
					</control>
				</itemlayout>
				<focusedlayout height="1080" width="720">
					<control type="image">
						<width>720</width>
						<height>1080</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>720</width>
						<height>1080</height>
						<texture>views/overlay_50.png</texture>
						<animation center="auto" condition="Control.HasFocus(510)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
						<animation center="auto" condition="Control.HasFocus(510)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
					</control>
					<control type="image">
						<width>720</width>
						<height>1080</height>
						<texture border="11">views/border.png</texture>
						<animation center="auto" condition="Control.HasFocus(510)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">Focus</animation>
						<animation center="auto" condition="Control.HasFocus(510)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">UnFocus</animation>
						<visible>!Control.HasFocus(3000) + !SubString(ListItem.Icon,default)</visible>
					</control>
				</focusedlayout>
			</control>
			<!-- Media Info -->
			<control type="group">
				<include>MediaInfoAnimation</include>
				<include>MediaInfoDiffuse</include>
				<control type="group">
					<left>50</left>
					<width>860</width>
					<include>MediaInfo</include>
					<animation effect="slide" end="960,0" time="0" condition="Container(532).Column(0) | Container(532).Column(1)">Conditional</animation>
				</control>
			</control>
			<control type="group">
				<left>240</left>
				<top>0</top>
				<include>MediaInfoCondition</include>
				<control type="image">
					<width>720</width>
					<height>1080</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="image">
					<width>720</width>
					<height>1080</height>
					<texture border="11">views/border.png</texture>
				</control>
			</control>
		</control>
	</include>
</includes>