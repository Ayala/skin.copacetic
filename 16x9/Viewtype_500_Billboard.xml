<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_500_Billboard">
		<control type="group">
			<visible>Control.IsVisible(500)</visible>
			<include>FullscreenDimensions</include>

			<!--On Previous Scroll Delay-->
			<control type="group" id="5007">
				<visible>Container(500).OnPrevious</visible>
				<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
			</control>

			<!--On Next Scroll Delay-->
			<control type="group" id="5008">
				<visible>Container(500).OnNext</visible>
				<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
			</control>

			<!-- List -->
			<control type="list" id="500">
				<viewtype label="31500">list</viewtype>
				<width>1920</width>
				<height>1080</height>
				<left>0</left>
				<top>0</top>
				<onup>3000</onup>
				<ondown>60</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<orientation>horizontal</orientation>
				<scrolltime tween="sine" easing="inout">380</scrolltime>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)</visible>
				<visible>String.Contains(Container.FolderPath,videodb://) | String.Contains(Container.FolderPath,special://) | String.Contains(Container.FolderPath,addons://) | String.Contains(Container.FolderPath,musicdb://) | String.Contains(Container.FolderPath,androidapp://)</visible>
				<focusedlayout width="1920" height="1080">
					<include>HiddenFocusButton</include>
					<include content="ListIcon"/>
						<control type="group">
							<visible>!Skin.String(BillboardView_Details,Off)</visible>
							<include>ViewtypeOverlay</include>
						</control>
				</focusedlayout>
				<itemlayout width="1920" height="1080">
					<include content="ListIcon"/>
						<control type="group">
							<visible>!Skin.String(BillboardView_Details,Off)</visible>
							<include>ViewtypeOverlay</include>
						</control>
				</itemlayout>
			</control>
			<control type="group">
				<include>ProgressBarFadeAnimation</include>
				<visible>!Control.IsVisible(5007) + !Control.IsVisible(5008)</visible>
				<!--Details-->
				<include content="CommonViewDetails"/>
				<!--Progress Bar-->
				<include content="ProgressBar">
					<param name="left" value="0"/>
					<param name="width" value="1920"/>
					<param name="top" value="1072"/>
					<param name="height" value="8"/>
				</include>
			</control>
		</control>
	</include>
</includes>
