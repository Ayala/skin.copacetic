<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1103">
	<!-- smartplaylisteditor -->
	<backgroundcolor>$VAR[BackgroundColor]</backgroundcolor>
	<defaultcontrol always="true">100</defaultcontrol>
	<controls>
		<!-- Background -->
		<include>DialogBackgroundImage</include>
		<!-- Main group -->
		<control type="group">
			<left>50</left>
			<top>40</top>
			<include>DialogAnimation</include>
			<!-- Heading -->
			<control type="label">
				<width>1820</width>
				<height>70</height>
				<font>Light60Upper</font>
				<textcolor>$VAR[FocusedColor]</textcolor>
				<label>31064</label>
			</control>
			<!-- Control group -->
			<control type="group" id="1000">
				<top>115</top>
				<width>1820</width>
				<height>775</height>
				<!-- Left grouplist -->
				<control type="grouplist" id="100">
					<centertop>50%</centertop>
					<width>305</width>
					<height>775</height>
					<onleft>9</onleft>
					<onright>9000</onright>
					<onup>noop</onup>
					<ondown>9000</ondown>
					<itemgap>0</itemgap>
					<scrolltime tween="sine" easing="out">240</scrolltime>
					<control type="button" id="101">
						<width>305</width>
						<height>75</height>
						<label>Background</label>
						<texturenofocus>-</texturenofocus>
						<onclick>RunScript(script.skin.helper.service,action=colorpicker,skinstring=BackgroundColor)</onclick>
					</control>
					<control type="button" id="102">
						<width>305</width>
						<height>75</height>
						<label>Diffuse</label>
						<texturenofocus>-</texturenofocus>
						<onclick>RunScript(script.skin.helper.service,action=colorpicker,skinstring=DiffuseColor)</onclick>
					</control>
					<control type="button" id="103">
						<width>305</width>
						<height>75</height>
						<label>Border</label>
						<texturenofocus>-</texturenofocus>
						<onclick>RunScript(script.skin.helper.service,action=colorpicker,skinstring=BorderColor)</onclick>
					</control>
					<control type="button" id="104">
						<width>305</width>
						<height>75</height>
						<label>Focused</label>
						<texturenofocus>-</texturenofocus>
						<onclick>RunScript(script.skin.helper.service,action=colorpicker,skinstring=FocusedColor)</onclick>
					</control>
					<control type="button" id="105">
						<width>305</width>
						<height>75</height>
						<label>Unfocused</label>
						<texturenofocus>-</texturenofocus>
						<onclick>RunScript(script.skin.helper.service,action=colorpicker,skinstring=UnFocusedColor)</onclick>
					</control>
					<control type="button" id="106">
						<width>305</width>
						<height>75</height>
						<label>Disabled</label>
						<texturenofocus>-</texturenofocus>
						<onclick>RunScript(script.skin.helper.service,action=colorpicker,skinstring=DisabledColor)</onclick>
					</control>
					<control type="button" id="107">
						<width>305</width>
						<height>75</height>
						<label>Selected</label>
						<texturenofocus>-</texturenofocus>
						<onclick>RunScript(script.skin.helper.service,action=colorpicker,skinstring=SelectedColor)</onclick>
					</control>
					<control type="button" id="108">
						<width>305</width>
						<height>75</height>
						<label>Button</label>
						<texturenofocus>-</texturenofocus>
						<onclick>RunScript(script.skin.helper.service,action=colorpicker,skinstring=ButtonColor)</onclick>
					</control>
				</control>
				<!-- Viewer -->
				<control type="group">
					<left>370</left>
					<centertop>50%</centertop>
					<!-- Diffuse -->
					<control type="image">
						<width>1450</width>
						<height>680</height>
						<texture colordiffuse="$VAR[DiffuseColor]">views/white_70.png</texture>
					</control>
					<!-- Poster 1 -->
					<control type="image">
						<width>120</width>
						<height>680</height>
						<texture>settings/Poster1.jpg</texture>
					</control>
					<control type="image">
						<width>120</width>
						<height>680</height>
						<texture colordiffuse="$VAR[DiffuseColor]">views/white_50.png</texture>
					</control>
					<!-- Poster 2 -->
					<control type="image">
						<left>120</left>
						<width>453</width>
						<height>680</height>
						<texture>settings/Poster2.jpg</texture>
					</control>
					<control type="image">
						<left>120</left>
						<width>453</width>
						<height>680</height>
						<texture colordiffuse="$VAR[BorderColor]" border="11,43,43,11">$VAR[BorderImage]</texture>
					</control>
					<!-- Title -->
					<control type="label">
						<left>610</left>
						<top>90</top>
						<width>420</width>
						<height>60</height>
						<font>Light60Spaced</font>
						<textcolor>$VAR[FocusedColor]</textcolor>
						<label>TITLE</label>
					</control>
					<!-- Details -->
					<control type="label">
						<left>610</left>
						<top>190</top>
						<width>420</width>
						<height>36</height>
						<font>Light36</font>
						<textcolor>$VAR[FocusedColor]</textcolor>
						<label>Details</label>
					</control>
					<!-- Plot -->
					<control type="textbox">
						<left>610</left>
						<top>240</top>
						<width>420</width>
						<height>280</height>
						<font>Light27</font>
						<label>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</label>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
					</control>
					<!-- Studio Flag -->
					<control type="image">
						<left>610</left>
						<top>520</top>
						<width>120</width>
						<height>80</height>
						<aspectratio>keep</aspectratio>
						<texture colordiffuse="$VAR[FocusedColor]">flags/default_studio.png</texture>
					</control>
					<!-- Heading -->
					<control type="label">
						<left>1076</left>
						<top>90</top>
						<width>320</width>
						<height>60</height>
						<font>Light60Spaced</font>
						<textcolor>$VAR[FocusedColor]</textcolor>
						<label>HEADING</label>
					</control>
					<control type="button">
						<left>1080</left>
						<top>165</top>
						<width>320</width>
						<height>75</height>
						<font>Light36</font>
						<label>Focused</label>
						<textcolor>$VAR[FocusedColor]</textcolor>
						<texturenofocus colordiffuse="$VAR[ButtonColor]">views/white_100.png</texturenofocus>
					</control>
					<control type="button">
						<left>1080</left>
						<top>265</top>
						<width>320</width>
						<height>75</height>
						<font>Light36</font>
						<label>Unfocused</label>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
						<texturenofocus colordiffuse="$VAR[ButtonColor]">views/white_30.png</texturenofocus>
					</control>
					<control type="button">
						<left>1080</left>
						<top>365</top>
						<width>320</width>
						<height>75</height>
						<font>Light36</font>
						<label>Disabled</label>
						<textcolor>$VAR[DisabledColor]</textcolor>
						<texturenofocus colordiffuse="$VAR[ButtonColor]">views/white_30.png</texturenofocus>
					</control>
					<control type="button">
						<left>1080</left>
						<top>465</top>
						<width>320</width>
						<height>75</height>
						<font>Light36</font>
						<label>Selected</label>
						<textcolor>$VAR[SelectedColor]</textcolor>
						<texturenofocus colordiffuse="$VAR[ButtonColor]">views/white_100.png</texturenofocus>
					</control>
					<control type="button">
						<left>1080</left>
						<top>565</top>
						<width>320</width>
						<height>75</height>
						<font>Light36</font>
						<label>Edit</label>
						<textcolor>$VAR[ButtonColor]</textcolor>
						<texturenofocus colordiffuse="$VAR[FocusedColor]">views/white_100.png</texturenofocus>
					</control>
				</control>
			</control>
			<!-- Button grouplist -->
			<control type="grouplist" id="9000">
				<right>50</right>
				<bottom>50</bottom>
				<width>1200</width>
				<height>75</height>
				<itemgap>0</itemgap>
				<onleft>1000</onleft>
				<onright>noop</onright>
				<onup>1000</onup>
				<ondown>noop</ondown>
				<align>right</align>
				<orientation>horizontal</orientation>
				<control type="button" id="110">
					<width>auto</width>
					<align>center</align>
					<textoffsetx>40</textoffsetx>
					<label>Reset all</label>
					<onclick>Skin.Reset(BackgroundColor)</onclick>
					<onclick>Skin.Reset(DiffuseColor)</onclick>
					<onclick>Skin.Reset(FocusedColor)</onclick>
					<onclick>Skin.Reset(BorderColor)</onclick>
					<onclick>Skin.Reset(UnFocusedColor)</onclick>
					<onclick>Skin.Reset(SelectedColor)</onclick>
					<onclick>Skin.Reset(DisabledColor)</onclick>
					<onclick>Skin.Reset(ButtonColor)</onclick>
				</control>
				<!-- OK Button -->
				<control type="button" id="20">
					<width>auto</width>
					<align>center</align>
					<textoffsetx>40</textoffsetx>
					<label>186</label>
					<onclick>Close</onclick>
				</control>
			</control>
		</control>
	</controls>
</window>