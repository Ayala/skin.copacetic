<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<variable name="DarkColor">
		<value>ff0e0e0e</value>
	</variable>
	<variable name="LightColor">
		<value>ffebedee</value>
	</variable>
	<variable name="DarkGreyColor">
		<value>ff1a2428</value>
	</variable>
	<variable name="MediumGreyColor">
		<value>ff33525e</value>
	</variable>
	<variable name="LightGreyColor">
		<value>ff299498</value>
	</variable>
	<variable name="AccentColor">
		<value>ffff6163</value>
	</variable>
	<variable name="ShadowColor">
		<value>ff000000</value>
	</variable>


	<variable name="PrimaryColor">
		<value condition="Skin.String(Theme,Light)">$VAR[DarkColor]</value>
		<value>$VAR[LightColor]</value>
	</variable>
	<variable name="SecondaryColor">
		<value condition="Skin.String(Theme,Light)">$VAR[LightColor]</value>
		<value>$VAR[DarkColor]</value>
	</variable>
	<variable name="TertiaryColor">
		<value condition="Skin.String(Theme,Light)">$VAR[MediumGreyColor]</value>
		<value>$VAR[LightGreyColor]</value>
	</variable>


	<variable name="ProgressBarFocusColor">
		<value condition="Control.IsVisible(504) + Skin.String(Theme,Light)">$VAR[DarkColor]</value>
		<value condition="[Control.IsVisible(50) + !Skin.String(ListView_Fanart,On)]">$VAR[DarkColor]</value>
		<value>$VAR[LightColor]</value>
	</variable>
	<variable name="ProgressBarBackgroundColor">
		<value condition="Control.IsVisible(504) + Skin.String(Theme,Light)">$VAR[DarkColor]</value>
		<value condition="[Control.IsVisible(50) + !Skin.String(ListView_Fanart,On)]">$VAR[DarkColor]</value>
		<value>$VAR[LightColor]</value>
	</variable>
	<variable name="FlagColor">
		<value condition="[Control.IsVisible(50) + [Skin.String(ListView_Fanart,On | String.IsEmpty(Skin.String(ListView_Fanart)]] | Control.IsVisible(501)">$VAR[LightColor]</value>
		<value>$VAR[PrimaryColor]</value>
	</variable>
	<variable name="MusicPlayerTextColor">
		<value condition="Window.IsActive(fullscreenvideo)">$VAR[LightColor]</value>
		<value condition="[String.IsEqual(Container.ViewMode,List) + $EXP[ListView_Background_IsVisible]] | String.IsEqual(Container.ViewMode,Billboard)">ffb4b5b6</value>
		<value condition="Skin.String(Theme,Light)">$VAR[MediumGreyColor]</value>
		<value>ffb4b5b6</value>
	</variable>



	<variable name="BorderColor">
		<value condition="Skin.String(Theme,Light)">$VAR[TertiaryColor]</value>
		<value>$VAR[QuarternaryColor]</value>
	</variable>
	<variable name="ListFocusColor">
		<value condition="!Skin.String(ListView_Fanart,Off) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)]">$VAR[LightColor]</value>
		<value>$VAR[PrimaryColor]</value>
	</variable>
	<variable name="ListUnfocusColor">
		<value condition="!Skin.String(ListView_Fanart,Off) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)]">$VAR[LightColor]</value>
		<value>$VAR[PrimaryColor]</value>
	</variable>
	<variable name="DetailedListFocusColor">
		<value condition="Skin.String(Theme,Light)">$VAR[QuarternaryColor]</value>
		<value>$VAR[LightColor]</value>
	</variable>
	<variable name="DetailedListSubTitleColor">
		<value condition="Skin.String(Theme,Light)">$VAR[LightColor]</value>
		<value>$VAR[TertiaryColor]</value>
	</variable>

	<variable name="IconBackgroundColor">
		<value condition="Control.IsVisible(50) | Control.IsVisible(501)">$VAR[DarkColor]</value>
		<value condition="Control.IsVisible(500)">$VAR[DetailedListFocusColor]</value>
		<value>$VAR[SecondaryColor]</value>
	</variable>











<!--old-->
	<variable name="BackgroundColor">
		<value condition="String.IsEmpty(Skin.String(BackgroundColor))">ffe73662</value>
		<value>$INFO[Skin.String(BackgroundColor)]</value>
	</variable>

	<variable name="DiffuseColor">
		<value condition="String.IsEmpty(Skin.String(DiffuseColor))">ff000000</value>
		<value>$INFO[Skin.String(DiffuseColor)]</value>
	</variable>
	<variable name="TextColor">
		<value condition="String.IsEmpty(Skin.String(TextColor))">ffffffff</value>
		<value>$INFO[Skin.String(TextColor)]</value>
	</variable>
	<variable name="FocusedColor">
		<value condition="String.IsEmpty(Skin.String(FocusedColor))">ff46ef75</value>
		<value>$INFO[Skin.String(FocusedColor)]</value>
	</variable>
	<variable name="DarkColor">
		<value condition="String.IsEmpty(Skin.String(FocusedColor))">ff1b102b</value>
		<value>$INFO[Skin.String(DarkColor)]</value>
	</variable>

	<variable name="UnFocusedColor">
		<value>66f1f1f1</value>
	</variable>
	<variable name="SelectedColor">
		<value>ffaaf200</value>
	</variable>
	<variable name="DisabledColor">
		<value>99000000</value>
	</variable>
</includes>
