<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- addonbrowser -->
	<backgroundcolor>$VAR[BackgroundColor]</backgroundcolor>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50,511,521,531</views>

	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Fanart -->
		<include>Fanart</include>

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>
			<include>OptionsHideAnimation</include>
			<!-- Views -->
			<include>Viewtype_50_List</include>
			<include>Viewtype_511_FilmstripSquare</include>
			<include>Viewtype_521_RowSquare</include>
			<include>Viewtype_531_WallSquare</include>
		</control>

		<!-- Options -->
		<control type="group">
			<include>OptionsAnimation</include>
			<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus() | ControlGroup(4000).HasFocus() | ControlGroup(5000).HasFocus()</visible>

			<!-- Background -->
			<include>OptionsBackgroundImage</include>

			<!-- Main group -->
			<control type="group">
				<left>85</left>
				<top>297</top>

				<!-- Scroll -->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>72</width>
					<height>20</height>
					<texture border="1,12,1,1" colordiffuse="DialogOverlayColorNF">common/ScrollBackgroundHorizontal.png</texture>
				</control>
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>24</width>
					<height>20</height>
					<texture border="1,12,1,1" colordiffuse="DialogOverlayColorFO">common/ScrollbarGripHorizontalFO.png</texture>
					<animation effect="slide" start="0" end="24" time="200" condition="ControlGroup(4000).HasFocus()">Conditional</animation>
					<animation effect="slide" start="0" end="48" time="200" condition="ControlGroup(5000).HasFocus()">Conditional</animation>
				</control>

				<!-- Heading -->
				<control type="label">
					<animation effect="fade" start="0" end="100" time="200">Visible</animation>
					<left>0</left>
					<top>34</top>
					<width>1200</width>
					<height>72</height>
					<label>$VAR[CustomMenuHeading]</label>
					<font>Font72</font>
					<textcolor>DialogColor1</textcolor>
				</control>

				<!-- Grouplist -->
				<control type="grouplist" id="3000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>50</onleft>
					<onright>4001</onright>
					<onback>50</onback>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">3001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="3001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>
					<!-- View -->
					<control type="button" id="99">
						<include>OptionButtons</include>
						<label>$INFO[Container.ViewMode]</label>
						<onclick>Container.NextViewMode</onclick>
					</control>
					<!-- Fanart -->
					<control type="radiobutton" id="98">
						<include>OptionButtons</include>
						<label>20445</label>
						<onclick>Skin.ToggleSetting(AddonFanart)</onclick>
						<selected>Skin.HasSetting(AddonFanart)</selected>
					</control>
					<!-- Overlays -->
					<control type="radiobutton" id="96">
						<include>OptionButtons</include>
						<label>31006</label>
						<onclick>Skin.ToggleSetting(Overlays)</onclick>
						<selected>Skin.HasSetting(Overlays)</selected>
					</control>
					<!-- Scrollbars -->
					<control type="radiobutton" id="94">
						<include>OptionButtons</include>
						<label>31005</label>
						<onclick>Skin.ToggleSetting(Scrollbars)</onclick>
						<selected>!Skin.HasSetting(Scrollbars)</selected>
					</control>
				</control>

				<!-- Grouplist -->
				<control type="grouplist" id="4000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft condition="!Skin.HasSetting(KioskMode)">3000</onleft>
					<onright>5001</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">4001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(4000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="4001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>
					<!-- Sort by -->
					<control type="button" id="3">
						<include>OptionButtons</include>
						<label>103</label>
						<visible>Control.IsEnabled(3)</visible>
					</control>
					<!-- Sort ascending/descending -->
					<control type="togglebutton" id="4">
						<include>OptionButtons</include>
						<label>584</label>
						<altlabel>585</altlabel>
						<usealttexture>Container.SortDirection(Descending)</usealttexture>
						<visible>Control.IsEnabled(4)</visible>
					</control>
					<!-- Filter -->
					<control type="edit" id="19">
						<include>OptionButtons</include>
						<label>587</label>
						<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
					</control>
					<!-- Filter -->
					<control type="radiobutton" id="93">
						<include>OptionButtons</include>
						<label>587</label>
						<onclick>right</onclick>
						<onclick>Filter</onclick>
						<selected>Container.Filtered</selected>
						<visible>Container.CanFilterAdvanced</visible>
					</control>
				</control>

				<!-- Grouplist -->
				<control type="grouplist" id="5000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>4001</onleft>
					<onright>50</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">5001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(5000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="5001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>
					<!-- Auto update -->
					<control type="button" id="5">
						<include>OptionButtons</include>
						<label>24063</label>
						<visible>Control.IsEnabled(5)</visible>
					</control>
					<!-- Notifications -->
					<control type="radiobutton" id="6">
						<include>OptionButtons</include>
						<label>25000</label>
						<visible>Control.IsEnabled(6)</visible>
					</control>
					<!-- Language -->
					<control type="radiobutton" id="7">
						<include>OptionButtons</include>
						<label>25001</label>
						<visible>Control.IsEnabled(7)</visible>
					</control>
					<!-- Broken -->
					<control type="radiobutton" id="8">
						<include>OptionButtons</include>
						<label>24999</label>
						<visible>Control.IsEnabled(8)</visible>
					</control>
					<!-- Updates -->
					<control type="radiobutton" id="9">
						<include>OptionButtons</include>
						<label>24034</label>
						<visible>Control.IsEnabled(9)</visible>
					</control>
				</control>

			</control>

		</control>

	</controls>

</window>