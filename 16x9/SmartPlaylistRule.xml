<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- smartplaylistrule -->
	<defaultcontrol always="true">15</defaultcontrol>
	<controls>
		<!-- Background -->
		<include>DialogBackgroundImage</include>
		<!-- Main group -->
		<control type="group">
			<left>50</left>
			<top>40</top>
			<include>DialogAnimation</include>
			<!-- Heading -->
			<control type="label" id="2">
				<width>1820</width>
				<height>70</height>
				<font>Light60Upper</font>
				<textcolor>$VAR[FocusedColor]</textcolor>
				<label>21421</label>
			</control>
			<!-- Control group -->
			<control type="group" id="1000">
				<top>115</top>
				<width>1820</width>
				<height>775</height>
				<!-- Grouplist -->
				<control type="grouplist">
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>885</width>
					<height>775</height>
					<onright>noop</onright>
					<onleft>noop</onleft>
					<ondown>9001</ondown>
					<onup>noop</onup>
					<itemgap>25</itemgap>
					<align>center</align>
					<!-- Rule match label -->
					<control type="label">
						<label>21422</label>
						<textcolor>$VAR[SelectedColor]</textcolor>
					</control>
					<!-- Rule Field -->
					<control type="spincontrolex" id="15">
						<label>Rule field</label>
					</control>
					<!-- Rule operator -->
					<control type="spincontrolex" id="16">
						<label>Rule operator</label>
					</control>
					<!-- Value edit -->
					<control type="edit" id="17">
						<hinttext>Enter value</hinttext>
					</control>
					<!-- Browse Button -->
					<control type="button" id="20">
						<label>1024</label>
					</control>
				</control>
			</control>
			<!-- Button grouplist -->
			<control type="grouplist" id="9001">
				<right>50</right>
				<bottom>50</bottom>
				<width>1200</width>
				<height>75</height>
				<itemgap>0</itemgap>
				<onleft>1000</onleft>
				<onright>noop</onright>
				<onup>1000</onup>
				<ondown>noop</ondown>
				<align>right</align>
				<orientation>horizontal</orientation>
				<!-- Cancel Button -->
				<control type="button" id="19">
					<width>auto</width>
					<align>center</align>
					<textoffsetx>40</textoffsetx>
					<label>X</label>
				</control>
				<!-- OK Button -->
				<control type="button" id="18">
					<width>auto</width>
					<align>center</align>
					<textoffsetx>40</textoffsetx>
					<label>186</label>
				</control>
			</control>
		</control>
	</controls>
</window>