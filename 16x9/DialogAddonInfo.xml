<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- addoninformation -->
	<defaultcontrol always="true">9000</defaultcontrol>
	<onload condition="!SubString(Control.GetLabel(13),*) | IsEmpty(Skin.String(AutoUpdate))">Skin.SetString(AutoUpdate,off)</onload>
	<onunload>ClearProperty(AddonDetails,home)</onunload>
	<controls>
		<!-- Hidden Button -->
		<control id="13" type="radiobutton">
			<include>HiddenControl</include>
			<visible>Control.IsEnabled(13)</visible>
		</control>
		<control type="group">
			<include>InfoDialogFadeAnimation</include>
			<include>MediaInfoDiffuse</include>
			<control type="group">
				<left>50</left>
				<left>1132</left>
				<include condition="StringCompare(Container.Viewmode,$LOCALIZE[31113]) | StringCompare(Container.Viewmode,$LOCALIZE[31116]) | StringCompare(Container.Viewmode,$LOCALIZE[31118])">MediaInfoWidth738</include>
				<include condition="![StringCompare(Container.Viewmode,$LOCALIZE[31113]) + StringCompare(Container.Viewmode,$LOCALIZE[31116]) + StringCompare(Container.Viewmode,$LOCALIZE[31118])]">MediaInfoWidth860</include>
				<animation effect="slide" end="960,0" condition="StringCompare(Container.Viewmode,$LOCALIZE[31115])">Conditional</animation>
				<animation effect="slide" end="1082,0" condition="StringCompare(Container.Viewmode,$LOCALIZE[31116]) | [StringCompare(Container.Viewmode,$LOCALIZE[31118]) + [StringCompare(Window(home).Property(CurrentColumn),0) | StringCompare(Window(home).Property(CurrentColumn),1) | StringCompare(Window(home).Property(CurrentColumn),2)]] | StringCompare(Container.Viewmode,$LOCALIZE[31113])">Conditional</animation>
				<!-- Heading -->
				<control type="grouplist">
					<top>50</top>
					<height>210</height>
					<align>right</align>
					<orientation>vertical</orientation>
					<control type="textbox">
						<height max="210">auto</height>
						<font>Light60Spaced</font>
						<label>24003</label>
					</control>
				</control>
				<!-- Details Line 1 -->
				<control type="label">
					<top>345</top>
					<width>78%</width>
					<height>36</height>
					<font>Light36</font>
					<label>$INFO[ListItem.Property(Addon.Name)]</label>
				</control>
				<!-- Details Line 2 -->
				<control type="label">
					<top>388</top>
					<height>66</height>
					<aligny>top</aligny>
					<font>Light33</font>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<wrapmultiline>true</wrapmultiline>
					<label>$INFO[ListItem.Property(Addon.Type)]$INFO[ListItem.Property(Addon.Creator), | ]$INFO[ListItem.Property(Addon.Version), | ]</label>
				</control>
				<!-- Plot -->
				<control type="textbox">
					<top>479</top>
					<height>195</height>
					<font>Light27</font>
					<label>$INFO[ListItem.Property(Addon.Description)]</label>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<autoscroll delay="10000" time="2000" repeat="12000">True</autoscroll>
				</control>
				<!-- Button grouplist -->
				<control type="grouplist" id="9000">
					<bottom>50</bottom>
					<height>75</height>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>
					<onup>Close</onup>
					<ondown>Close</ondown>
					<orientation>horizontal</orientation>
					<!-- Launch Addon Button -->
					<control type="button" id="12">
						<include>DialogButton</include>
						<label>518</label>
						<visible>Control.IsEnabled(12)</visible>
					</control>
					<!-- Configure Addon Button -->
					<control type="button" id="9">
						<include>DialogButton</include>
						<label>24020</label>
						<visible>Control.IsEnabled(9)</visible>
					</control>
					<!-- Update Addon Button -->
					<control type="button" id="8">
						<include>DialogButton</include>
						<label>24069</label>
						<visible>Control.IsEnabled(8)</visible>
					</control>
					<!-- Install/UnInstall Addon button -->
					<control type="button" id="6">
						<include>DialogButton</include>
						<label>24022</label>
						<visible>Control.IsEnabled(6)</visible>
					</control>
					<!-- Enable/Disable Addon button -->
					<control type="button" id="7">
						<include>DialogButton</include>
						<label>24021</label>
						<visible>Control.IsEnabled(7)</visible>
					</control>
					<!-- Auto-update button Button -->
					<control type="button" id="20">
						<include>DialogButton</include>
						<label>$VAR[AutoUpdate]</label>
						<onclick>SetFocus(13)</onclick>
						<onclick>Select</onclick>
						<onclick>SetFocus(20)</onclick>
						<onclick condition="SubString(Skin.String(AutoUpdate),off)">Skin.SetString(AutoUpdate,on)</onclick>
						<onclick condition="SubString(Skin.String(AutoUpdate),on)">Skin.SetString(AutoUpdate,off)</onclick>
					</control>
					<!-- Changelog Button -->
					<control type="button" id="10">
						<include>DialogButton</include>
						<label>24036</label>
						<visible>Control.IsEnabled(10)</visible>
					</control>
				</control>
			</control>
		</control>
		<!-- Image -->
		<control type="group">
			<animation effect="fade" start="100" end="100" time="200">WindowClose</animation>
			<!-- Viewtype_511_FilmstripSquare -->
			<control type="group">
				<left>0</left>
				<top>0</top>
				<visible>StringCompare(Container.Viewmode,$LOCALIZE[31113])</visible>
				<control type="image">
					<width>1080</width>
					<height>1080</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="image">
					<width>1080</width>
					<height>1080</height>
					<texture colordiffuse="$VAR[BorderColor]" border="11,43,43,11">$VAR[BorderImage]</texture>
				</control>
			</control>
			<!-- Viewtype_521_RowSquare -->
			<control type="group">
				<left>100</left>
				<top>270</top>
				<control type="image">
					<width>540</width>
					<height>540</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="image">
					<width>540</width>
					<height>540</height>
					<texture colordiffuse="$VAR[BorderColor]" border="11,43,43,11">$VAR[BorderImage]</texture>
				</control>
				<visible>StringCompare(Container.Viewmode,$LOCALIZE[31115])</visible>
			</control>
			<!-- Viewtype_531_WallSquare -->
			<control type="group">
				<left>0</left>
				<top>0</top>
				<animation effect="slide" end="360,0" condition="StringCompare(Window(home).Property(CurrentColumn),1)">Conditional</animation>
				<animation effect="slide" end="720,0" condition="StringCompare(Window(home).Property(CurrentColumn),2)">Conditional</animation>
				<animation effect="slide" end="1080,0" condition="StringCompare(Window(home).Property(CurrentColumn),3)">Conditional</animation>
				<animation effect="slide" end="1440,0" condition="StringCompare(Window(home).Property(CurrentColumn),4)">Conditional</animation>
				<animation effect="slide" end="0,360" condition="StringCompare(Window(home).Property(CurrentRow),1)">Conditional</animation>
				<animation effect="slide" end="0,720" condition="StringCompare(Window(home).Property(CurrentRow),2)">Conditional</animation>
				<visible>StringCompare(Container.Viewmode,$LOCALIZE[31118])</visible>
				<control type="image">
					<width>360</width>
					<height>360</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="image">
					<width>360</width>
					<height>360</height>
					<texture colordiffuse="$VAR[BorderColor]" border="11,43,43,11">$VAR[BorderImage]</texture>
				</control>
			</control>
		</control>
	</controls>
</window>