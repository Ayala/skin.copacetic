<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_501_Billboard">
		<control type="group">
			<visible>Control.IsVisible(501)</visible>
			<include>FullscreenDimensions</include>

			<!--On Previous Scroll Delay-->
			<control type="group" id="5005">
				<visible>Container(501).OnPrevious</visible>
				<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
			</control>

			<!--On Next Scroll Delay-->
			<control type="group" id="5006">
				<visible>Container(501).OnNext</visible>
				<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
			</control>

			<!-- List -->
			<control type="list" id="501">
				<viewtype label="31501">list</viewtype>
				<width>1920</width>
				<height>1080</height>
				<left>0</left>
				<top>0</top>
				<onup>3000</onup>
				<ondown>60</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<orientation>horizontal</orientation>
				<scrolltime tween="sine" easing="inout">380</scrolltime>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)</visible>
				<visible>String.Contains(Container.FolderPath,videodb://) | String.Contains(Container.FolderPath,special://) | String.Contains(Container.FolderPath,addons://) | String.Contains(Container.FolderPath,musicdb://) | String.Contains(Container.FolderPath,androidapp://)</visible>
				<focusedlayout width="1920" height="1080">
					<include>HiddenFocusButton</include>
					<include content="ListIcon"/>
						<control type="group">
							<visible>!Skin.String(BillboardView_Details,Off)</visible>
							<include>ViewtypeOverlay</include>
						</control>
				</focusedlayout>
				<itemlayout width="1920" height="1080">
					<include content="ListIcon"/>
						<control type="group">
							<visible>!Skin.String(BillboardView_Details,Off)</visible>
							<include>ViewtypeOverlay</include>
						</control>
				</itemlayout>
			</control>
			<control type="group">
				<include>ProgressBarFadeAnimation</include>
				<visible>!Control.IsVisible(5005) + !Control.IsVisible(5006)</visible>
				<!--Details no logo-->
				<include content="CommonViewDetails">
					<param name="groupvisibility" value="!Skin.String(BillboardView_Details,Off) + [Skin.String(BillboardView_Logo,Off) | String.IsEmpty(ListItem.Art(clearlogo)) | String.IsEmpty(Skin.String(BillboardView_Details)]"/>
					<param name="left" value="192"/>
					<param name="width" value="1536"/>
					<param name="labeltype" value="textbox"/>
					<param name="titlevisibility" value="true"/>
					<param name="titleheight" value="144"/>
					<param name="titlefont" value="BillboardFocused"/>
					<param name="titlealign" value="left"/>
					<param name="logovisibility" value="false"/>
					<param name="infovisibility" value="Skin.String(BillboardView_Details,TitleAndInfo) | Skin.String(BillboardView_Details,All) | String.IsEmpty(Skin.String(BillboardView_Details)"/>
					<param name="infoheight" value="43"/>
			    <param name="titleinfogap" value="0"/>
					<param name="titlecolor" value="$VAR[LightColor]"/>
					<param name="infofont" value="BillboardSubTitle"/>
					<param name="plotvisibility" value="Skin.String(BillboardView_Details,TitleAndPlot) | Skin.String(BillboardView_Details,All) | String.IsEmpty(Skin.String(BillboardView_Details)"/>"
					<param name="plotmaxheight" value="110"/>
					<param name="plotcolor" value="$VAR[LightColor]"/>
				</include>
				<!--Details with logo-->
				<control type="group">
					<animation effect="slide" end="-142,464" time="0" condition="Skin.String(BillboardView_Logo,On) + !String.IsEmpty(ListItem.Art(clearlogo)) + Skin.String(BillboardView_Details,Title) ">Conditional</animation>
					<include content="CommonViewDetails">
						<param name="groupvisibility" value="!Skin.String(BillboardView_Details,Off) + Skin.String(BillboardView_Logo,On) + !String.IsEmpty(ListItem.Art(clearlogo))"/>
						<param name="bottom" value="203"/>
						<param name="left" value="192"/>
						<param name="width" value="1536"/>
						<param name="titlevisibility" value="false"/>
						<param name="logovisibility" value="true"/>
						<param name="infovisibility" value="Skin.String(BillboardView_Details,TitleAndInfo) | Skin.String(BillboardView_Details,All) | String.IsEmpty(Skin.String(BillboardView_Details)"/>
						<param name="infoheight" value="43"/>
						<param name="titleinfogap" value="20"/>
						<param name="titlecolor" value="$VAR[LightColor]"/>
						<param name="infofont" value="BillboardSubTitle"/>
						<param name="plotvisibility" value="Skin.String(BillboardView_Details,TitleAndPlot) | Skin.String(BillboardView_Details,All) | String.IsEmpty(Skin.String(BillboardView_Details)"/>"
						<param name="plotmaxheight" value="110"/>
						<param name="plotcolor" value="$VAR[LightColor]"/>
					</include>
				</control>
				<!--Progress Bar-->
				<include content="ProgressBar">
					<param name="left" value="800"/>
					<param name="width" value="320"/>
					<param name="top" value="1056"/>
					<param name="height" value="4"/>
				</include>
			</control>
		</control>
	</include>
</includes>
