<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_501_Showcase">
		<control type="group">
			<visible>Control.IsVisible(501)</visible>
			<include>FullscreenDimensions</include>
			<control type="fixedlist" id="501">
				<viewtype label="31520">list</viewtype>
				<onup>3000</onup>
				<ondown>60</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<focusposition>0</focusposition>
				<orientation>horizontal</orientation>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)</visible>
				<visible>String.Contains(Container.FolderPath,videodb://) | String.Contains(Container.FolderPath,special://) | String.Contains(Container.FolderPath,addons://) | String.Contains(Container.FolderPath,musicdb://) | String.Contains(Container.FolderPath,androidapp://)</visible>
				<scrolltime tween="sine" easing="inout">380</scrolltime>
				<itemlayout width="1920" height="1080"/>
				<focusedlayout width="1920" height="1080">
					<include>HiddenFocusButton</include>
				</focusedlayout>
			</control>
			<!--scroll left-->
			<control type="group">

				<!--On Previous Thumbs-->
				<control type="group" id="5010">
					<visible>Container(501).OnPrevious</visible>
					<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
					<!--Fanart-->
					<control type="group">
						<visible>Skin.String(ShowcaseView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(ShowcaseView_Display)</visible>
						<!--Move DropShadow -1 to 0-->
						<include content="DropShadow">
							<param name="left" value="-2800"/>
							<param name="top" value="80"/>
							<param name="width" value="1660"/>
							<param name="height" value="1000"/>
							<param name="texture" value="views/dropshadow_showcase-fanart.png"/>
							<param name="visible" value="Container(501).OnPrevious"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="2370,0"/>
						</include>
						<!--Move Icon -1 to 0-->
						<include content="ListIcon">
							<param name="left" value="-2770"/>
							<param name="top" value="90"/>
							<param name="width" value="1600"/>
							<param name="height" value="900"/>
							<param name="visible" value="Container(501).OnPrevious"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="2370,0"/>
						</include>
						<!--Move DropShadow 0 to 1-->
						<include content="DropShadow">
							<param name="left" value="-430"/>
							<param name="top" value="80"/>
							<param name="width" value="1660"/>
							<param name="height" value="1000"/>
							<param name="texture" value="views/dropshadow_showcase-fanart.png"/>
							<param name="visible" value="Container(501).OnPrevious + !String.IsEmpty(Container.ListItemNoWrap(1).FolderPath"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="2320,0"/>
						</include>
						<!--Move Icon 0 to 1-->
						<include content="ListIcon">
							<param name="left" value="-400"/>
							<param name="top" value="90"/>
							<param name="width" value="1600"/>
							<param name="height" value="900"/>
							<param name="visible" value="Container(501).OnPrevious + !String.IsEmpty(Container.ListItemNoWrap(1).FolderPath)"/>
							<param name="texture" value="$VAR[Thumbnail(1)Content]"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="2320,0"/>
						</include>
					</control>

					<!--Posters-->
					<control type="group">
						<visible>Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)</visible>
						<!--Move DropShadow -1 to 0-->
						<include content="DropShadow">
							<param name="left" value="-1758"/>
							<param name="top" value="-10"/>
							<param name="width" value="720"/>
							<param name="height" value="1120"/>
							<param name="texture" value="views/dropshadow_showcase-poster.png"/>
							<param name="visible" value="Container(501).OnPrevious"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="1920,0"/>
						</include>
						<!--Move Icon -1 to 0-->
						<include content="ListIcon">
							<param name="left" value="-1728"/>
							<param name="top" value="0"/>
							<param name="width" value="680"/>
							<param name="height" value="1020"/>
							<param name="visible" value="Container(501).OnPrevious"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="1920,0"/>
						</include>
						<!--Move DropShadow 0 to 1-->
						<include content="DropShadow">
							<param name="left" value="162"/>
							<param name="top" value="-10"/>
							<param name="width" value="740"/>
							<param name="height" value="1120"/>
							<param name="texture" value="views/dropshadow_showcase-poster.png"/>
							<param name="visible" value="Container(501).OnPrevious + !String.IsEmpty(Container.ListItemNoWrap(1).FolderPath"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="1920,0"/>
						</include>
						<!--Move Icon 0 to 1-->
						<include content="ListIcon">
							<param name="left" value="192"/>
							<param name="top" value="0"/>
							<param name="width" value="680"/>
							<param name="height" value="1020"/>
							<param name="texture" value="$VAR[Thumbnail(1)Content]"/>
							<param name="visible" value="Container(501).OnPrevious + !String.IsEmpty(Container.ListItemNoWrap(1).FolderPath)"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="1920,0"/>
						</include>
					</control>
				</control>

				<!--On Next Thumbs-->
				<control type="group" id="5011">
					<visible>Container(501).OnNext</visible>
					<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
					<!--Fanart-->
					<control type="group">
						<visible>Skin.String(ShowcaseView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(ShowcaseView_Display)</visible>
						<!--Move DropShadow 0 to -1-->
						<include content="DropShadow">
							<param name="left" value="-430"/>
							<param name="top" value="80"/>
							<param name="width" value="1640"/>
							<param name="height" value="1000"/>
							<param name="texture" value="views/dropshadow_showcase-fanart.png"/>
							<param name="visible" value="Container(501).OnNext + !String.IsEmpty(Container.ListItemNoWrap(-1).FolderPath)"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="-2320,0"/>
						</include>
						<!--Move Icon 0 to -1-->
						<include content="ListIcon">
							<param name="left" value="-400"/>
							<param name="top" value="90"/>
							<param name="width" value="1600"/>
							<param name="height" value="900"/>
							<param name="texture" value="$VAR[Thumbnail(-1)Content]"/>
							<param name="visible" value="Container(501).OnNext + !String.IsEmpty(Container.ListItemNoWrap(-1).FolderPath)"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="-2320,0"/>
						</include>
						<!--Move DropShadow 1 to 0-->
						<include content="DropShadow">
							<param name="left" value="1920"/>
							<param name="top" value="80"/>
							<param name="width" value="1660"/>
							<param name="height" value="1000"/>
							<param name="texture" value="views/dropshadow_showcase-fanart.png"/>
							<param name="visible" value="Container(501).OnNext"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="-2350"/>
						</include>
						<!--Move Icon 1 to 0-->
						<include content="ListIcon">
							<param name="left" value="1950"/>
							<param name="top" value="90"/>
							<param name="width" value="1600"/>
							<param name="height" value="900"/>
							<param name="visible" value="Container(501).OnNext"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="-2350,0"/>
						</include>
					</control>

					<!--Posters-->
					<control type="group">
						<visible>Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)</visible>
						<!--Move DropShadow 0 to -1-->
						<include content="DropShadow">
							<param name="left" value="162"/>
							<param name="top" value="-10"/>
							<param name="width" value="740"/>
							<param name="height" value="1120"/>
							<param name="texture" value="views/dropshadow_showcase-poster.png"/>
							<param name="visible" value="Container(501).OnNext + !String.IsEmpty(Container.ListItemNoWrap(-1).FolderPath)"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="-1920,0"/>
						</include>
						<!--Move Icon 0 to -1-->
						<include content="ListIcon">
							<param name="left" value="192"/>
							<param name="top" value="0"/>
							<param name="width" value="680"/>
							<param name="height" value="1020"/>
							<param name="texture" value="$VAR[Thumbnail(-1)Content]"/>
							<param name="visible" value="Container(501).OnNext + !String.IsEmpty(Container.ListItemNoWrap(-1).FolderPath)"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="-1920,0"/>
						</include>
						<!--Move DropShadow 1 to 0-->
						<include content="DropShadow">
							<param name="left" value="2082"/>
							<param name="top" value="-10"/>
							<param name="width" value="740"/>
							<param name="height" value="1120"/>
							<param name="texture" value="views/dropshadow_showcase-poster.png"/>
							<param name="visible" value="Container(501).OnNext"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="-1920,0"/>
						</include>
						<!--Move Icon 1 to 0-->
						<include content="ListIcon">
							<param name="left" value="2112"/>
							<param name="top" value="0"/>
							<param name="width" value="680"/>
							<param name="height" value="1020"/>
							<param name="visible" value="Container(501).OnNext"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="-1920,0"/>
						</include>
					</control>
				</control>

				<!--Static thumbnails-->
				<control type="group" id="5012">
					<!--Details-->
					<control type="group">
						<visible>!Control.IsVisible(5010) + !Control.IsVisible(5011)</visible>
						<animation effect="slide" start="0,0" end="0,-64" time="0" condition="Skin.String(ShowcaseView_Logo,On) + !String.IsEmpty(ListItem.Art(clearlogo))">Conditional</animation>
						<animation effect="slide" start="0,0" end="-142,0" time="100" condition="Skin.String(ShowcaseView_Display,Posters)">Conditional</animation>
						<include>ProgressBarFadeAnimation</include>
						<include content="CommonViewDetails">
							<param name="groupvisibility" value="!Skin.String(ShowcaseView_Details,Off)"/>
							<param name="left" value="1250"/>
							<param name="bottom" value="120"/>
							<param name="width" value="620"/>
							<param name="height" value="840"/>
							<param name="align" value="center"/>
							<param name="labeltype" value="textbox"/>
							<param name="titlevisibility" value="Skin.String(ShowcaseView_Logo,Off) | [Skin.String(ShowcaseView_Logo,On) + String.IsEmpty(ListItem.Art(clearlogo))] | String.IsEmpty(Skin.String(ShowcaseView_Logo)"/>
							<param name="titleheight" value="244"/>
							<param name="titlefont" value="StripFocused"/>
							<param name="titlealign" value="left"/>
							<param name="logovisibility" value="Skin.String(ShowcaseView_Logo,On) + !String.IsEmpty(ListItem.Art(clearlogo))"/>
							<param name="infovisibility" value="Skin.String(ShowcaseView_Details,TitleAndInfo) | Skin.String(ShowcaseView_Details,All) | String.IsEmpty(Skin.String(ShowcaseView_Details)"/>
							<param name="infoheight" value="33"/>
							<param name="infofont" value="StripDetails"/>
							<param name="plotvisibility" value="Skin.String(ShowcaseView_Details,TitleAndPlot) | Skin.String(ShowcaseView_Details,All) | String.IsEmpty(Skin.String(ShowcaseView_Details)"/>"
							<param name="plotmaxheight" value="290"/>
							<param name="plotfont" value="StripBody"/>
							<param name="altplotvisibility" value="false"/>
							<param name="alt2plotvisibility" value="false"/>
						</include>
					</control>
					<!--Fanart thumbnails-->
					<control type="group">
						<visible>!Control.IsVisible(5010) + !Control.IsVisible(5011) + [Skin.String(ShowcaseView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(ShowcaseView_Display)]</visible>
						<include content="DropShadow">
							<param name="left" value="-430"/>
							<param name="top" value="80"/>
							<param name="width" value="1660"/>
							<param name="height" value="1000"/>
							<param name="texture" value="views/dropshadow_showcase-fanart.png"/>
						</include>
						<include content="ListIcon">
							<param name="left" value="-400"/>
							<param name="top" value="90"/>
							<param name="width" value="1600"/>
							<param name="height" value="900"/>
						</include>
					</control>
					<!--Fanart progress bar-->
					<control type="group">
						<visible>!Control.IsVisible(5010) + !Control.IsVisible(5011) + [Skin.String(ShowcaseView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(GalleryView_Display)]</visible>
						<include>ProgressBarFadeAnimation</include>
						<include content="ProgressBar">
							<param name="left" value="0"/>
							<param name="top" value="990"/>
							<param name="width" value="1200"/>
						</include>
					</control>

					<!--Poster thumbnails-->
					<control type="group">
						<visible>!Control.IsVisible(5010) + !Control.IsVisible(5011) + Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)</visible>
						<include content="DropShadow">
							<param name="left" value="162"/>
							<param name="top" value="-10"/>
							<param name="width" value="740"/>
							<param name="height" value="1120"/>
							<param name="texture" value="views/dropshadow_showcase-poster.png"/>
						</include>
						<include content="ListIcon">
							<param name="left" value="192"/>
							<param name="top" value="0"/>
							<param name="width" value="680"/>
							<param name="height" value="1020"/>
						</include>
					</control>
					<!--Posters progress bar-->
					<control type="group">
						<visible>!Control.IsVisible(5010) + !Control.IsVisible(5011) + Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)</visible>
						<include>ProgressBarFadeAnimation</include>
						<include content="ProgressBar">
							<param name="left" value="192"/>
							<param name="top" value="1020"/>
							<param name="width" value="680"/>
						</include>
					</control>
				</control>

			</control>
		</control>
	</include>
</includes>
