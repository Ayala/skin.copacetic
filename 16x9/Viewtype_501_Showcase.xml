<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_501_Showcase">
		<control type="group">
			<visible>Control.IsVisible(501)</visible>
			<include>FullscreenDimensions</include>
			<control type="fixedlist" id="501">
				<viewtype label="31520">list</viewtype>
				<onup>3000</onup>
				<ondown>60</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<focusposition>0</focusposition>
				<orientation>horizontal</orientation>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)</visible>
				<visible>String.Contains(Container.FolderPath,videodb://) | String.Contains(Container.FolderPath,special://) | String.Contains(Container.FolderPath,addons://) | String.Contains(Container.FolderPath,musicdb://) | String.Contains(Container.FolderPath,androidapp://)</visible>
				<scrolltime tween="sine" easing="inout">380</scrolltime>
				<itemlayout width="1920" height="1080"/>
				<focusedlayout width="1920" height="1080">
					<include>HiddenFocusButton</include>
				</focusedlayout>
			</control>
			<!--scroll left-->
			<control type="group">

				<!--On Previous Thumbs-->
				<control type="group" id="5010">
					<visible>Container(501).OnPrevious</visible>
					<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
					<!--Fanart-->
					<control type="group">
						<visible>Skin.String(ShowcaseView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(ShowcaseView_Display)</visible>
						<!--Move Icon -1 to 0-->
						<include content="ListIcon">
							<param name="left" value="-3360"/>
							<param name="top" value="0"/>
							<param name="width" value="1920"/>
							<param name="height" value="1080"/>
							<param name="visible" value="Container(501).OnPrevious"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="2640,0"/>
							<param name="iconleft" value="155"/>
							<param name="showgradient" value="true"/>

						</include>
						<!--Move Icon 0 to 1-->
						<include content="ListIcon">
							<param name="left" value="-720"/>
							<param name="top" value="0"/>
							<param name="width" value="1920"/>
							<param name="height" value="1080"/>
							<param name="visible" value="Container(501).OnPrevious + !String.IsEmpty(Container.ListItemNoWrap(1).FolderPath)"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="2640,0"/>
							<param name="iconleft" value="155"/>
							<param name="texture" value="$VAR[Thumbnail(1)Content]"/>
							<param name="showgradient" value="true"/>
						</include>
					</control>

					<!--Posters-->
					<control type="group">
						<visible>Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)</visible>
						<!--Move Icon -1 to 0-->
						<include content="ListIcon">
							<param name="left" value="-1920"/>
							<param name="top" value="0"/>
							<param name="width" value="720"/>
							<param name="height" value="1080"/>
							<param name="visible" value="Container(501).OnPrevious"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="1920,0"/>
							<param name="showgradient" value="true"/>
						</include>
						<!--Move Icon 0 to 1-->
						<include content="ListIcon">
							<param name="left" value="0"/>
							<param name="top" value="0"/>
							<param name="width" value="720"/>
							<param name="height" value="1080"/>
							<param name="texture" value="$VAR[Thumbnail(1)Content]"/>
							<param name="visible" value="Container(501).OnPrevious + !String.IsEmpty(Container.ListItemNoWrap(1).FolderPath)"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="1920,0"/>
							<param name="showgradient" value="true"/>
						</include>
					</control>
				</control>

				<!--On Next Thumbs-->
				<control type="group" id="5011">
					<visible>Container(501).OnNext</visible>
					<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
					<!--Fanart-->
					<control type="group">
						<visible>Skin.String(ShowcaseView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(ShowcaseView_Display)</visible>
						<!--Move Icon 0 to -1-->
						<include content="ListIcon">
							<param name="left" value="-720"/>
							<param name="top" value="0"/>
							<param name="width" value="1920"/>
							<param name="height" value="1080"/>
							<param name="visible" value="Container(501).OnNext + !String.IsEmpty(Container.ListItemNoWrap(-1).FolderPath)"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="-2640,0"/>
							<param name="iconleft" value="155"/>
							<param name="texture" value="$VAR[Thumbnail(-1)Content]"/>
							<param name="showgradient" value="true"/>
						</include>
						<!--Move Icon 1 to 0-->
						<include content="ListIcon">
							<param name="left" value="1920"/>
							<param name="top" value="0"/>
							<param name="width" value="1920"/>
							<param name="height" value="1080"/>
							<param name="visible" value="Container(501).OnNext"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="-2640,0"/>
							<param name="iconleft" value="155"/>
							<param name="showgradient" value="true"/>
						</include>
					</control>

					<!--Posters-->
					<control type="group">
						<visible>Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)</visible>
						<!--Move Icon 0 to -1-->
						<include content="ListIcon">
							<param name="left" value="0"/>
							<param name="top" value="0"/>
							<param name="width" value="720"/>
							<param name="height" value="1080"/>
							<param name="texture" value="$VAR[Thumbnail(-1)Content]"/>
							<param name="visible" value="Container(501).OnNext + !String.IsEmpty(Container.ListItemNoWrap(-1).FolderPath)"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="-1920,0"/>
							<param name="showgradient" value="true"/>
						</include>
						<!--Move Icon 1 to 0-->
						<include content="ListIcon">
							<param name="left" value="1920"/>
							<param name="top" value="0"/>
							<param name="width" value="720"/>
							<param name="height" value="1080"/>
							<param name="visible" value="Container(501).OnNext"/>
							<param name="animationtype" value="Hidden"/>
							<param name="animationeffect" value="slide"/>
							<param name="animationend" value="-1920,0"/>
							<param name="showgradient" value="true"/>
						</include>
					</control>
				</control>

				<!--Static thumbnails-->
				<control type="group" id="5012">
					<!--Details-->
					<control type="group">
						<visible>!Control.IsVisible(5010) + !Control.IsVisible(5011)</visible>
						<animation effect="slide" start="0,0" end="-240,0" time="100" condition="Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)">Conditional</animation>
						<include>ProgressBarFadeAnimation</include>
						<include content="CommonViewDetails"/>
					</control>

					<!--Fanart thumbnails-->
					<include content="ListIcon">
						<param name="left" value="-720"/>
						<param name="top" value="0"/>
						<param name="width" value="1920"/>
						<param name="height" value="1080"/>
						<param name="visible" value="!Control.IsVisible(5010) + !Control.IsVisible(5011) + [Skin.String(ShowcaseView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(ShowcaseView_Display)]"/>
						<param name="iconleft" value="155"/>
						<param name="showgradient" value="true"/>
					</include>
					<!--Fanart progress bar-->
					<control type="group">
						<visible>!Control.IsVisible(5010) + !Control.IsVisible(5011) + [Skin.String(ShowcaseView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(GalleryView_Display)]</visible>
						<include>ProgressBarFadeAnimation</include>
						<include content="ProgressBar">
							<param name="left" value="440"/>
						</include>
					</control>

					<!--Poster thumbnails-->
						<include content="ListIcon">
							<param name="left" value="0"/>
							<param name="top" value="0"/>
							<param name="width" value="720"/>
							<param name="height" value="1080"/>
							<param name="visible" value="!Control.IsVisible(5010) + !Control.IsVisible(5011) + Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)"/>
							<param name="iconleft" value="0"/>
							<param name="showgradient" value="true"/>
						</include>
					<!--Posters progress bar-->
					<control type="group">
						<visible>!Control.IsVisible(5010) + !Control.IsVisible(5011) + Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)</visible>
						<include>ProgressBarFadeAnimation</include>
						<include content="ProgressBar">
							<param name="left" value="200"/>
						</include>
					</control>
				</control>

			</control>
		</control>
	</include>
</includes>
