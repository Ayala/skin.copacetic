<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- volumebar -->
	<controls>
		<control type="group">
			<right>0</right>
			<top>0</top>
			<width>750</width>
			<height>150</height>
			<include>DialogToastAnimation</include>
			<animation effect="fade" start="100" end="0" time="0" condition="Window.IsActive(mutebug)">Conditional</animation>
			<!-- Background image -->
			<control type="image">
				<width>750</width>
				<height>130</height>
				<texture colordiffuse="$VAR[BackgroundColor]">views/white_100.png</texture>
			</control>
			<control type="image">
				<width>750</width>
				<height>130</height>
				<texture colordiffuse="$VAR[DiffuseColor]">views/white_50.png</texture>
			</control>
			<!-- Heading -->
			<control type="label">
				<left>20</left>
				<top>22</top>
				<width>710</width>
				<height>40</height>
				<scroll>true</scroll>
				<font>LightUp30</font>
				<label>13376</label>
				<textcolor>$VAR[FocusedColor]</textcolor>
			</control>
			<!-- Details -->
			<control type="label">
				<left>20</left>
				<top>66</top>
				<width>710</width>
				<height>37</height>
				<scroll>true</scroll>
				<font>Light27</font>
				<label>$VAR[VolumeDetails]</label>
				<textcolor>$VAR[UnFocusedColor]</textcolor>
			</control>
			<!-- Progress -->
			<control type="progress" id="404">
				<top>130</top>
				<width>750</width>
				<height>20</height>
				<info>player.volume</info>
				<texturebg colordiffuse="$VAR[UnFocusedColor]">views/white_100.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture colordiffuse="$VAR[BackgroundColor]">views/white_100.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
		</control>
	</controls>
</window>