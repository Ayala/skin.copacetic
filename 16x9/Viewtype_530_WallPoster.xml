<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_530_WallPoster">
		<control type="group">
			<visible>Control.IsVisible(530)</visible>
			<!-- List -->
			<control type="panel" id="530">
				<width>1920</width>
				<height>1080</height>
				<onleft>530</onleft>
				<onright>530</onright>
				<onup>3000</onup>
				<ondown>60</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<orientation>horizontal</orientation>
				<viewtype label="31117">list</viewtype>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<itemlayout height="540" width="360">
					<control type="image">
						<width>360</width>
						<height>540</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>360</width>
						<height>540</height>
						<texture>views/overlay_50.png</texture>
					</control>
				</itemlayout>
				<focusedlayout height="540" width="360">
					<control type="button">
						<visible>false</visible>
						<onfocus condition="Container.Column(0)">SetProperty(CurrentColumn,0,home)</onfocus>
						<onfocus condition="Container.Column(1)">SetProperty(CurrentColumn,1,home)</onfocus>
						<onfocus condition="Container.Column(2)">SetProperty(CurrentColumn,2,home)</onfocus>
						<onfocus condition="Container.Column(3)">SetProperty(CurrentColumn,3,home)</onfocus>
						<onfocus condition="Container.Column(4)">SetProperty(CurrentColumn,4,home)</onfocus>
						<onfocus condition="Container.Row(0)">SetProperty(CurrentRow,0,home)</onfocus>
						<onfocus condition="Container.Row(1)">SetProperty(CurrentRow,1,home)</onfocus>
					</control>
					<control type="image">
						<width>360</width>
						<height>540</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>360</width>
						<height>540</height>
						<texture>views/overlay_50.png</texture>
						<animation center="auto" condition="Control.HasFocus(530)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
						<animation center="auto" condition="Control.HasFocus(530)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
					</control>
					<control type="image">
						<width>360</width>
						<height>540</height>
						<texture border="11">views/border.png</texture>
						<animation center="auto" condition="Control.HasFocus(530)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">Focus</animation>
						<animation center="auto" condition="Control.HasFocus(530)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">UnFocus</animation>
						<visible>!Control.HasFocus(3000) + !SubString(ListItem.Icon,default)</visible>
					</control>
				</focusedlayout>
			</control>
			<!-- Media Info -->
			<control type="group">
				<include>MediaInfoAnimation</include>
				<include>MediaInfoDiffuse</include>
				<control type="group">
					<left>50</left>
					<width>738</width>
					<include>MediaInfoAnimation</include>
					<animation effect="slide" end="1082,0" time="0" condition="Container(530).Column(0) | Container(530).Column(1) | Container(530).Column(2)">Conditional</animation>
					<include>MediaInfo</include>
				</control>
			</control>
			<control type="group">
				<left>0</left>
				<top>0</top>
				<include>MediaInfoCondition</include>
				<animation effect="slide" end="360,0" condition="StringCompare(Window(home).Property(CurrentColumn),1)">Conditional</animation>
				<animation effect="slide" end="720,0" condition="StringCompare(Window(home).Property(CurrentColumn),2)">Conditional</animation>
				<animation effect="slide" end="1080,0" condition="StringCompare(Window(home).Property(CurrentColumn),3)">Conditional</animation>
				<animation effect="slide" end="1440,0" condition="StringCompare(Window(home).Property(CurrentColumn),4)">Conditional</animation>
				<animation effect="slide" end="0,540" condition="StringCompare(Window(home).Property(CurrentRow),1)">Conditional</animation>
				<control type="image">
					<width>360</width>
					<height>540</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="image">
					<width>360</width>
					<height>540</height>
					<texture border="11">views/border.png</texture>
				</control>
			</control>
		</control>
	</include>
</includes>