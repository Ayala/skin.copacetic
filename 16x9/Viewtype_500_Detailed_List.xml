<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_500_Detailed_List">
		<control type="group">
			<visible>Control.IsVisible(500)</visible>
			<include>FullscreenDimensions</include>

			<!--On Previous Scroll Delay-->
			<control type="group" id="5003">
				<visible>Container(500).OnPrevious</visible>
				<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
			</control>

			<!--On Next Scroll Delay-->
			<control type="group" id="5004">
				<visible>Container(500).OnNext</visible>
				<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
			</control>

			<!-- List -->
			<control type="list" id="500">
				<viewtype label="535">list</viewtype>
				<left>240</left>
				<top>0</top>
				<width>1438</width>
				<height>1080</height>
				<onleft>3000</onleft>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				<orientation>vertical</orientation>
				<scrolltime tween="sine" easing="inout">380</scrolltime>

				<itemlayout height="144" width="1440" condition="Skin.String(DetailedListView_Display,Fanart) | String.IsEmpty(Skin.String(DetailedListView_Display))">
					<include content="DetailedListViewLayout"/>
				</itemlayout>

				<focusedlayout height="144" width="1440" condition="Skin.String(DetailedListView_Display,Fanart) | String.IsEmpty(Skin.String(DetailedListView_Display))">
					<include>HiddenFocusButton</include>
					<include content="DetailedListViewLayout">
						<param name="unfocusedvisible" value="false"/>
						<param name="focusedvisible" value="true"/>
						<param name="backingwidth" value="1440"/>
						<param name="backingcolor" value="$VAR[DetailedListFocusColor]"/>
						<param name="backingtexturelight" value="views/white_100.png"/>
						<param name="backingtexturedark" value="views/white_100.png"/>
						<param name="titletop" value="37"/>
						<param name="titlewidth" value="989"/>
						<param name="titleheight" value="44"/>
						<param name="titlefont" value="DetailedListFocused"/>
						<param name="titletextcolor" value="$VAR[SecondaryColor]"/>
						<param name="subtitletop" value="81"/>
					</include>
				</focusedlayout>

				<itemlayout height="144" width="1056" condition="Skin.String(DetailedListView_Display,Posters)">
					<include content="DetailedListViewLayout">
						<param name="width" value="1056"/>
				    <param name="backingwidth" value="1056"/>
						<param name="titleleft" value="170"/>
				    <param name="titlewidth" value="1005"/>
						<param name="fanartvisible" value="false"/>
					</include>
				</itemlayout>

				<focusedlayout height="144" width="1056" condition="Skin.String(DetailedListView_Display,Posters)">
					<include>HiddenFocusButton</include>
					<include content="DetailedListViewLayout">
						<param name="width" value="1056"/>
						<param name="unfocusedvisible" value="false"/>
						<param name="focusedvisible" value="true"/>
						<param name="backingwidth" value="1056"/>
						<param name="backingcolor" value="$VAR[DetailedListFocusColor]"/>
						<param name="backingtexturelight" value="views/white_100.png"/>
						<param name="backingtexturedark" value="views/white_100.png"/>
						<param name="titleleft" value="170"/>
						<param name="titletop" value="37"/>
						<param name="titlewidth" value="1005"/>
						<param name="titleheight" value="44"/>
						<param name="titlefont" value="DetailedListFocused"/>
						<param name="titletextcolor" value="$VAR[SecondaryColor]"/>
						<param name="subtitletop" value="81"/>
					 <param name="fanartvisible" value="false"/>
					</include>
				</focusedlayout>

				<itemlayout height="144" width="1056" condition="Skin.String(DetailedListView_Display,Both)">
					<include content="DetailedListViewLayout">
						<param name="width" value="1056"/>
						<param name="backingwidth" value="1056"/>
						<param name="titlewidth" value="750"/>
					</include>
				</itemlayout>

				<focusedlayout height="144" width="1056" condition="Skin.String(DetailedListView_Display,Both)">
					<include>HiddenFocusButton</include>
					<include content="DetailedListViewLayout">
						<param name="width" value="1056"/>
						<param name="unfocusedvisible" value="false"/>
						<param name="focusedvisible" value="true"/>
						<param name="backingwidth" value="1056"/>
						<param name="backingcolor" value="$VAR[DetailedListFocusColor]"/>
						<param name="backingtexturelight" value="views/white_100.png"/>
						<param name="backingtexturedark" value="views/white_100.png"/>
						<param name="titletop" value="37"/>
						<param name="titlewidth" value="750"/>
						<param name="titleheight" value="44"/>
						<param name="titlefont" value="DetailedListFocused"/>
						<param name="titletextcolor" value="$VAR[SecondaryColor]"/>
						<param name="subtitletop" value="81"/>
					</include>
				</focusedlayout>

				<itemlayout height="144" width="840" condition="Skin.String(DetailedListView_Display,Showcase)">
					<include content="DetailedListViewLayout">
						<param name="width" value="696"/>
				    <param name="backingwidth" value="696"/>
						<param name="titleleft" value="170"/>
				    <param name="titlewidth" value="795"/>
						<param name="fanartvisible" value="false"/>
					</include>
				</itemlayout>

				<focusedlayout height="144" width="840" condition="Skin.String(DetailedListView_Display,Showcase)">
					<include>HiddenFocusButton</include>
					<include content="DetailedListViewLayout">
						<param name="width" value="696"/>
						<param name="unfocusedvisible" value="false"/>
						<param name="focusedvisible" value="true"/>
						<param name="backingwidth" value="696"/>
						<param name="backingcolor" value="$VAR[DetailedListFocusColor]"/>
						<param name="backingtexturelight" value="views/white_100.png"/>
						<param name="backingtexturedark" value="views/white_100.png"/>
						<param name="titleleft" value="170"/>
						<param name="titletop" value="37"/>
						<param name="titlewidth" value="625"/>
						<param name="titleheight" value="44"/>
						<param name="titlefont" value="DetailedListFocused"/>
						<param name="titletextcolor" value="$VAR[SecondaryColor]"/>
						<param name="subtitletop" value="81"/>
					 <param name="fanartvisible" value="false"/>
					</include>
				</focusedlayout>


			</control>

			<control type="group">
				<visible>Skin.String(DetailedListView_Display,Posters) | Skin.String(DetailedListView_Display,Both)</visible>
				<include content="ListIcon">
					<param name="width" value="720"/>
					<param name="height" value="1080"/>
					<param name="left" value="1200"/>
					<param name="top" value="0"/>
					<param name="fadetime" value="200"/>
					<param name="texture" value="$INFO[ListItem.Art(poster)]"/>
					<param name="showgradient" value="true"/>
				</include>
				<include content="ProgressBar">
					<param name="left" value="1400"/>
				</include>
			</control>

			<control type="group">
				<visible>Skin.String(DetailedListView_Display,Showcase)</visible>
				<include content="ListIcon">
					<param name="width" value="1080"/>
					<param name="height" value="1080"/>
					<param name="left" value="840"/>
					<param name="top" value="0"/>
					<param name="fadetime" value="200"/>
					<param name="texture" value="$INFO[ListItem.Art(showcase)]"/>
					<param name="showgradient" value="true"/>
				</include>
				<include content="ProgressBar">
					<param name="left" value="1220"/>
				</include>
			</control>

		</control>
	</include>
</includes>
