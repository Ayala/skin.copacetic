<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_502_Showcase">

		<control type="group">
			<visible>$EXP[ShowcaseView_IsVisible]</visible>
			<include>ViewModeFadeAnimation</include>
			<include>FullscreenDimensions</include>
			<!--Container-->
			<control type="fixedlist" id="502">
				<viewtype label="Showcase">bigwrap</viewtype>
				<onup>SetFocus(3000,0)</onup>
				<ondown>60</ondown>
				<onleft>0</onleft>
				<onright>0</onright>
				<preloaditems>2</preloaditems>
				<pagecontrol>60</pagecontrol>
				<focusposition>0</focusposition>
				<orientation>horizontal</orientation>
				<visible>[$EXP[All_Paths] | $EXP[Video_Containers] | $EXP[Music_Containers]] + !$EXP[ListOnly_Containers]</visible>
				<scrolltime tween="sine" easing="inout">380</scrolltime>
				<itemlayout width="1920" height="1080"/>
				<focusedlayout width="1920" height="1080">
					<include>HiddenFocusButton</include>
				</focusedlayout>
			</control>

			<!--Static thumbnails-->
			<control type="group">
				<visible>!Control.IsVisible(5001) + !Control.IsVisible(5002)</visible>
				<!--Square-->
				<control type="group">
					<visible>$EXP[ShowcaseView_Display_IsSquare]</visible>
					<include>ViewModeFadeAnimation</include>
					<include content="ListIcon">
						<param name="left" value="0"/>
						<param name="top" value="0"/>
						<param name="width" value="1080"/>
						<param name="height" value="1080"/>
						<param name="visible" value="$EXP[ShowcaseView_Display_IsSquare]"/>
						<param name="showgradient" value="true"/>
					</include>
				</control>
				<!--Posters-->
				<control type="group">
					<visible>$EXP[ShowcaseView_Display_IsPosters]</visible>
					<include>ViewModeFadeAnimation</include>
					<include content="ListIcon">
						<param name="left" value="0"/>
						<param name="top" value="0"/>
						<param name="width" value="720"/>
						<param name="height" value="1080"/>
						<param name="visible" value="$EXP[ShowcaseView_Display_IsPosters]"/>
						<param name="showgradient" value="true"/>
					</include>
				</control>
			</control>

			<!--Static content-->
			<control type="group">
				<visible>!Control.IsVisible(5001) + !Control.IsVisible(5002)</visible>
				<include>ProgressBarFadeAnimation</include>
				<!--Progress bar-->
				<control type="group">
					<animation effect="slide" end="-180,0" time="0" condition="$EXP[ShowcaseView_Display_IsPosters]">Conditional</animation>
					<include content="ProgressBar">
						<param name="left" value="360"/>
					</include>
				</control>
				<!--Details-->
				<control type="group">
					<animation effect="slide" end="-180,0" condition="$EXP[ShowcaseView_Display_IsPosters]">Conditional</animation>
					<animation effect="slide" end="80,0" condition="Skin.String(ShowcaseView_Details,Title) + $EXP[ShowcaseView_Details_Logo_IsVisible]">Conditional</animation>
					<!--details no logo-->
					<include content="CommonViewDetails"/>
					<!--details with logo-->
					<include content="CommonViewDetails">
						<param name="groupvisibility" value="$EXP[ShowcaseView_Details_Logo_IsVisible]"/>
						<param name="titlevisibility" value="false"/>
						<param name="logovisibility" value="true"/>
						<param name="titleinfogap" value="20"/>
					</include>
				</control>
			</control>

			<!--On Previous Thumbs-->
			<control type="group">
				<visible>Control.IsVisible(5001)</visible>
				<include>CustomViewsBackground</include>
				<!--Square-->
				<control type="group">
					<visible>$EXP[ShowcaseView_Display_IsSquare]</visible>
					<!--Move Icon -1 to 0-->
					<include content="ListIcon">
						<param name="left" value="-1920"/>
						<param name="top" value="0"/>
						<param name="width" value="1080"/>
						<param name="height" value="1080"/>
						<param name="visible" value="Container(502).OnPrevious"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationcondition" value="true"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="1920,0"/>
						<param name="showgradient" value="true"/>
					</include>
					<!--Move Icon 0 to 1-->
					<include content="ListIcon">
						<param name="left" value="0"/>
						<param name="top" value="0"/>
						<param name="width" value="1080"/>
						<param name="height" value="1080"/>
						<param name="visible" value="Container(502).OnPrevious + !String.IsEmpty(Container.ListItemNoWrap(1).FolderPath)"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationcondition" value="true"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="1920,0"/>
						<param name="texture" value="$VAR[Thumbnail(1)Content]"/>
						<param name="showgradient" value="true"/>
					</include>
				</control>
				<!--Posters-->
				<control type="group">
					<visible>$EXP[ShowcaseView_Display_IsPosters]</visible>
					<!--Move Icon -1 to 0-->
					<include content="ListIcon">
						<param name="left" value="-1920"/>
						<param name="top" value="0"/>
						<param name="width" value="720"/>
						<param name="height" value="1080"/>
						<param name="visible" value="Container(502).OnPrevious"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationcondition" value="true"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="1920,0"/>
						<param name="showgradient" value="true"/>
					</include>
					<!--Move Icon 0 to 1-->
					<include content="ListIcon">
						<param name="left" value="0"/>
						<param name="top" value="0"/>
						<param name="width" value="720"/>
						<param name="height" value="1080"/>
						<param name="texture" value="$VAR[Thumbnail(1)Content]"/>
						<param name="visible" value="Container(502).OnPrevious + !String.IsEmpty(Container.ListItemNoWrap(1).FolderPath)"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationcondition" value="true"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="1920,0"/>
						<param name="showgradient" value="true"/>
					</include>
				</control>
			</control>

			<!--On Next Thumbs-->
			<control type="group">
				<visible>Control.IsVisible(5002)</visible>
				<include>CustomViewsBackground</include>
				<!--Square-->
				<control type="group">
					<visible>$EXP[ShowcaseView_Display_IsSquare]</visible>
					<!--Move Icon 0 to -1-->
					<include content="ListIcon">
						<param name="left" value="0"/>
						<param name="top" value="0"/>
						<param name="width" value="1080"/>
						<param name="height" value="1080"/>
						<param name="visible" value="Container(502).OnNext + !String.IsEmpty(Container.ListItemNoWrap(-1).FolderPath)"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationcondition" value="true"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="-1920,0"/>
						<param name="texture" value="$VAR[Thumbnail(-1)Content]"/>
						<param name="showgradient" value="true"/>
					</include>
					<!--Move Icon 1 to 0-->
					<include content="ListIcon">
						<param name="left" value="1920"/>
						<param name="top" value="0"/>
						<param name="width" value="1080"/>
						<param name="height" value="1080"/>
						<param name="visible" value="Container(502).OnNext"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationcondition" value="true"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="-1920,0"/>
						<param name="showgradient" value="true"/>
					</include>
				</control>
				<!--Posters-->
				<control type="group">
					<visible>$EXP[ShowcaseView_Display_IsPosters]</visible>
					<!--Move Icon 0 to -1-->
					<include content="ListIcon">
						<param name="left" value="0"/>
						<param name="top" value="0"/>
						<param name="width" value="720"/>
						<param name="height" value="1080"/>
						<param name="texture" value="$VAR[Thumbnail(-1)Content]"/>
						<param name="visible" value="Container(502).OnNext + !String.IsEmpty(Container.ListItemNoWrap(-1).FolderPath)"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationcondition" value="true"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="-1920,0"/>
						<param name="showgradient" value="true"/>
					</include>
					<!--Move Icon 1 to 0-->
					<include content="ListIcon">
						<param name="left" value="1920"/>
						<param name="top" value="0"/>
						<param name="width" value="720"/>
						<param name="height" value="1080"/>
						<param name="visible" value="Container(502).OnNext"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationcondition" value="true"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="-1920,0"/>
						<param name="showgradient" value="true"/>
					</include>
				</control>
			</control>

		</control>
	</include>
</includes>
