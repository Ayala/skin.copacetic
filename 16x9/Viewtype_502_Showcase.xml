<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_502_Showcase">

		<control type="group">
			<visible>Control.IsVisible(502)</visible>
			<include>ViewtypeFadeAnimation</include>
			<include>FullscreenDimensions</include>
			<!--Container-->
			<control type="fixedlist" id="502">
				<viewtype label="Showcase">bigwrap</viewtype>
				<onup>3000</onup>
				<ondown>60</ondown>
				<onleft>0</onleft>
				<onright>0</onright>
				<preloaditems>2</preloaditems>
				<pagecontrol>60</pagecontrol>
				<focusposition>0</focusposition>
				<orientation>horizontal</orientation>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)</visible>
				<visible>String.Contains(Container.FolderPath,videodb://) | String.Contains(Container.FolderPath,special://) | String.Contains(Container.FolderPath,addons://) | String.Contains(Container.FolderPath,musicdb://) | String.Contains(Container.FolderPath,androidapp://)</visible>
				<scrolltime tween="sine" easing="inout">380</scrolltime>
				<itemlayout width="1920" height="1080"/>
				<focusedlayout width="1920" height="1080">
					<include>HiddenFocusButton</include>
				</focusedlayout>
			</control>

			<!--Static thumbnails-->
			<control type="group">
				<!--Fanart thumbnails-->
				<include content="ListIcon">
					<param name="left" value="0"/>
					<param name="top" value="0"/>
					<param name="width" value="1080"/>
					<param name="height" value="1080"/>
					<param name="aspectratio" value="scale"/>
					<param name="visible" value="!Control.IsVisible(5001) + !Control.IsVisible(5002) + [Skin.String(ShowcaseView_Display,Square) | Container.Content(episodes) | String.IsEmpty(Skin.String(ShowcaseView_Display)]"/>
					<param name="showgradient" value="true"/>
				</include>
				<!--Poster thumbnails-->
				<include content="ListIcon">
					<param name="left" value="0"/>
					<param name="top" value="0"/>
					<param name="width" value="720"/>
					<param name="height" value="1080"/>
					<param name="visible" value="!Control.IsVisible(5001) + !Control.IsVisible(5002) + Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)"/>
					<param name="showgradient" value="true"/>
				</include>
			</control>

			<!--Static content-->
			<control type="group">
				<visible>!Control.IsVisible(5001) + !Control.IsVisible(5002)</visible>
				<include>ProgressBarFadeAnimation</include>
				<!--Progress bar-->
				<control type="group">
					<animation effect="slide" end="-180,0" time="0" condition="Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)">Conditional</animation>
					<include content="ProgressBar">
						<param name="left" value="380"/>
					</include>
				</control>
				<!--Details-->
				<control type="group">
					<animation effect="slide" start="0,0" end="-240,0" time="100" condition="Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)">Conditional</animation>
					<!--details no logo-->
					<include content="CommonViewDetails"/>
					<!--details with logo-->
					<include content="CommonViewDetails">
						<param name="groupvisibility" value="!Skin.String(ShowcaseView_Details,Off) + Skin.String(ShowcaseView_Logo,On) + !String.IsEmpty(ListItem.Art(clearlogo))"/>
						<param name="bottom" value="203"/>
						<param name="titlevisibility" value="false"/>
						<param name="logovisibility" value="true"/>
						<param name="titleinfogap" value="20"/>
					</include>
				</control>
			</control>

			<!--On Previous Thumbs-->
			<control type="group">
				<visible>Control.IsVisible(5001)</visible>
				<include>CustomViewsBackground</include>
				<!--Fanart-->
				<control type="group">
					<visible>Skin.String(ShowcaseView_Display,Square) | Container.Content(episodes) | String.IsEmpty(Skin.String(ShowcaseView_Display)</visible>
					<!--Move Icon -1 to 0-->
					<include content="ListIcon">
						<param name="left" value="-1920"/>
						<param name="top" value="0"/>
						<param name="width" value="1080"/>
						<param name="height" value="1080"/>
						<param name="aspectratio" value="scale"/>
						<param name="visible" value="Container(502).OnPrevious"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="1920,0"/>
						<param name="showgradient" value="true"/>
					</include>
					<!--Move Icon 0 to 1-->
					<include content="ListIcon">
						<param name="left" value="0"/>
						<param name="top" value="0"/>
						<param name="width" value="1080"/>
						<param name="height" value="1080"/>
						<param name="aspectratio" value="scale"/>
						<param name="visible" value="Container(502).OnPrevious + !String.IsEmpty(Container.ListItemNoWrap(1).FolderPath)"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="1920,0"/>
						<param name="texture" value="$VAR[Thumbnail(1)Content]"/>
						<param name="showgradient" value="true"/>
					</include>
				</control>
				<!--Posters-->
				<control type="group">
					<visible>Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)</visible>
					<!--Move Icon -1 to 0-->
					<include content="ListIcon">
						<param name="left" value="-1920"/>
						<param name="top" value="0"/>
						<param name="width" value="720"/>
						<param name="height" value="1080"/>
						<param name="visible" value="Container(502).OnPrevious"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="1920,0"/>
						<param name="showgradient" value="true"/>
					</include>
					<!--Move Icon 0 to 1-->
					<include content="ListIcon">
						<param name="left" value="0"/>
						<param name="top" value="0"/>
						<param name="width" value="720"/>
						<param name="height" value="1080"/>
						<param name="texture" value="$VAR[Thumbnail(1)Content]"/>
						<param name="visible" value="Container(502).OnPrevious + !String.IsEmpty(Container.ListItemNoWrap(1).FolderPath)"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="1920,0"/>
						<param name="showgradient" value="true"/>
					</include>
				</control>
			</control>

			<!--On Next Thumbs-->
			<control type="group">
				<visible>Control.IsVisible(5002)</visible>
				<include>CustomViewsBackground</include>
				<!--Fanart-->
				<control type="group">
					<visible>Skin.String(ShowcaseView_Display,Square) | Container.Content(episodes) | String.IsEmpty(Skin.String(ShowcaseView_Display)</visible>
					<!--Move Icon 0 to -1-->
					<include content="ListIcon">
						<param name="left" value="0"/>
						<param name="top" value="0"/>
						<param name="width" value="1080"/>
						<param name="height" value="1080"/>
						<param name="aspectratio" value="scale"/>
						<param name="visible" value="Container(502).OnNext + !String.IsEmpty(Container.ListItemNoWrap(-1).FolderPath)"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="-1920,0"/>
						<param name="texture" value="$VAR[Thumbnail(-1)Content]"/>
						<param name="showgradient" value="true"/>
					</include>
					<!--Move Icon 1 to 0-->
					<include content="ListIcon">
						<param name="left" value="1920"/>
						<param name="top" value="0"/>
						<param name="width" value="1080"/>
						<param name="height" value="1080"/>
						<param name="aspectratio" value="scale"/>
						<param name="visible" value="Container(502).OnNext"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="-1920,0"/>
						<param name="showgradient" value="true"/>
					</include>
				</control>
				<!--Posters-->
				<control type="group">
					<visible>Skin.String(ShowcaseView_Display,Posters) + !Container.Content(episodes)</visible>
					<!--Move Icon 0 to -1-->
					<include content="ListIcon">
						<param name="left" value="0"/>
						<param name="top" value="0"/>
						<param name="width" value="720"/>
						<param name="height" value="1080"/>
						<param name="texture" value="$VAR[Thumbnail(-1)Content]"/>
						<param name="visible" value="Container(502).OnNext + !String.IsEmpty(Container.ListItemNoWrap(-1).FolderPath)"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="-1920,0"/>
						<param name="showgradient" value="true"/>
					</include>
					<!--Move Icon 1 to 0-->
					<include content="ListIcon">
						<param name="left" value="1920"/>
						<param name="top" value="0"/>
						<param name="width" value="720"/>
						<param name="height" value="1080"/>
						<param name="visible" value="Container(502).OnNext"/>
						<param name="animationtype" value="Hidden"/>
						<param name="animationeffect" value="slide"/>
						<param name="animationend" value="-1920,0"/>
						<param name="showgradient" value="true"/>
					</include>
				</control>
			</control>

		</control>
	</include>
</includes>
