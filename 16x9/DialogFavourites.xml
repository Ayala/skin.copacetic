<?xml version="1.0" encoding="UTF-8"?>
<window>
	<backgroundcolor>$VAR[SecondaryColor]</backgroundcolor>
	<defaultcontrol always="true">450</defaultcontrol>
	<include>WindowFadeAnimation</include>
	<controls>
		<include>FullscreenDimensions</include>
		<control type="image">
      <texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
    </control>
		<control type="group">

			<!--Background gradient for Light mode-->
			<control type="image">
				<visible>Skin.String(Theme,Light)</visible>
				<aspectratio>stretch</aspectratio>
				<texture colordiffuse="$VAR[DarkColor]">views/gradient_light-background.png</texture>
			</control>

			<!-- List -->
			<include content="ListViewTemplate">
				<param name="id" value="450"/>
				<param name="onleft" value="0"/>
				<param name="onright" value="0"/>
				<param name="label" value="$INFO[ListItem.Label]"/>
			</include>

			<!-- Image-->
			<control type="image">
				<left>1320</left>
				<top>180</top>
				<width>480</width>
				<height>720</height>
				<texture>$INFO[Container(450).ListItem.Icon]</texture>
				<aspectratio aligny="center">keep</aspectratio>
				<visible>!String.Contains(Container(450).ListItem.Icon,Default)</visible>
			</control>
			<control type="image">
				<left>1320</left>
				<top>180</top>
				<width>480</width>
				<height>720</height>
				<texture>$INFO[Container(450).ListItem.Icon]</texture>
				<colordiffuse>$VAR[UnFocusedColor]</colordiffuse>
				<aspectratio aligny="center">keep</aspectratio>
				<visible>String.Contains(Container(450).ListItem.Icon,Default)</visible>
			</control>

		</control>
	</controls>
</window>
