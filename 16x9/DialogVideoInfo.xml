						<height>43</height>
						<font>DialogDetails</font>
						<textcolor>$VAR[LightColor]</textcolor>
						<label>$VAR[TitleInfo]</label>
						<align>left</align>
					</control>
					<!--Plot-->
					<control type="textbox">
