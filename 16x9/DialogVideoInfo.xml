<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- movieinformation -->
	<defaultcontrol always="true">65001</defaultcontrol>
	<onload condition="System.HasAddon(script.tvtunes)">RunScript(script.tvtunes,backend=True)</onload>
	<controls>
		<include>FullscreenDimensions</include>
		<include content="Fanart">
			<param name="texture" value="$VAR[InfoScreenBackground]"/>
		</include>
		<include content="ViewtypeOverlay"/>

		<control type="group">
				<control type="group">
					<left>192</left>
					<top>73</top>
					<width>1536</width>
					<height>525</height>
