				<control type="image" id="921">
					<left>1660</left>
					<top>970</top>
					<width>90</width>
					<height>60</height>
					<aspectratio>keep</aspectratio>
					<texture colordiffuse="$VAR[LightColor]" fallback="flags/blank.png">$VAR[Studio_Name]</texture>
					<animation effect="slide" start="0,0" end="120,0" time="0" condition="String.IsEqual(Control.GetLabel(922),flags/blank.png)">Conditional</animation>
				</control>
				<!--MPAA flag-->
				<control type="image" id="922">
					<left>1780</left>
					<top>970</top>
					<width>90</width>
					<height>60</height>
					<aspectratio>keep</aspectratio>
					<texture colordiffuse="$VAR[LightColor]" fallback="flags/blank.png">$VAR[MPAA_Certificate]</texture>
				</control>
