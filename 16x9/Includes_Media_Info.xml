<includes>
	<include name="MediaInfoDiffuse">
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture>views/overlay_90.png</texture>
		</control>
	</include>
	<include name="MediaInfoCondition">
		<visible>System.IdleTime(3) + !SubString(ListItem.Icon,Default) + !Container.Content(files) + !Container.Content(genres) + !Container.Content(years) + !Container.Content(actors) + !Container.Content(playlists) + !Container.Content(plugins) + !Container.Content(studios) + !Container.Content(directors) + !Container.Content(sets) + !Container.Content(tags) + !Control.HasFocus(60) + !Control.HasFocus(3000) + !Window.IsVisible(yesnodialog) + !Window.IsVisible(progressdialog) + !Window.IsVisible(virtualkeyboard) + !Window.IsVisible(contextmenu) + !Window.IsVisible(numericinput) + !Window.IsVisible(shutdownmenu) + !Window.IsVisible(playercontrols) + !Window.IsVisible(songinformation) + !Window.IsVisible(busydialog) + !Window.IsVisible(addoninformation) + !Window.IsVisible(textviewer) + !Window.IsVisible(selectdialog) + !Window.IsVisible(musicinformation) + !Window.IsVisible(okdialog) + !Window.IsVisible(movieinformation)</visible>
	</include>
	<include name="MediaInfoWidth860">
		<width>860</width>
	</include>
	<include name="MediaInfoWidth738">
		<width>738</width>
	</include>
	<include name="Flags">
		<!-- Studio Flag -->
		<control type="image">
			<left>1580</left>
			<bottom>50</bottom>
			<width>120</width>
			<height>80</height>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>keep</aspectratio>
			<texture fallback="flags/default_studio.png">$INFO[ListItem.Studio,flags/studios/,.png]</texture>
			<visible>!SubString(ListItem.Icon,Default)</visible>
		</control>
		<!-- MPAA Rating Flag -->
		<control type="image">
			<left>1750</left>
			<bottom>50</bottom>
			<width>120</width>
			<height>80</height>
			<aspectratio>keep</aspectratio>
			<texture fallback="flags/default_rating.png">$VAR[Info_Certificate]</texture>
			<visible>!SubString(ListItem.Icon,Default)</visible>
		</control>
	</include>
	<include name="MediaInfo">
		<control type="group">
			<animation effect="fade" start="0" end="100" time="200">Visible</animation>
			<visible>!StringCompare(Control.GetLabel(5),$LOCALIZE[207])</visible>
			<!-- Heading -->
			<control type="grouplist">
				<top>50</top>
				<height>210</height>
				<align>right</align>
				<orientation>vertical</orientation>
				<visible>IsEmpty(ListItem.Art(clearlogo)) | [!IsEmpty(ListItem.Art(clearlogo)) + !Skin.HasSetting(EnableLogos)]</visible>
				<control type="textbox">
					<height max="210">auto</height>
					<font>Light60Spaced</font>
					<label>$VAR[InfoTitle]</label>
				</control>
			</control>
			<control type="image">
				<left>50</left>
				<top>50</top>
				<width>640</width>
				<height>248</height>
				<aspectratio scalediffuse="false">keep</aspectratio>
				<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
				<visible>Skin.HasSetting(EnableLogos)</visible>
			</control>
			<!-- Details Line 1 -->
			<control type="label">
				<top>345</top>
				<width>78%</width>
				<height>36</height>
				<font>Light36</font>
				<label>$VAR[InfoLine1]</label>
			</control>
			<!-- Star Rating -->
			<control type="image">
				<right>0</right>
				<top>351</top>
				<width>147</width>
				<height>24</height>
				<aspectratio>keep</aspectratio>
				<texture>$VAR[StarRating]</texture>
				<visible>!Container.Content(seasons)</visible>
			</control>
			<!-- Details Line 2 -->
			<control type="label">
				<top>388</top>
				<height>66</height>
				<aligny>top</aligny>
				<font>Light33</font>
				<textcolor>UnFocused</textcolor>
				<wrapmultiline>true</wrapmultiline>
				<label>$VAR[InfoLine2]</label>
			</control>
			<!-- Plot -->
			<control type="textbox">
				<top>479</top>
				<height>259</height>
				<font>Light27</font>
				<label>$VAR[Plot]</label>
				<textcolor>ff6bcbc9</textcolor>
				<autoscroll delay="10000" time="2000" repeat="12000">True</autoscroll>
			</control>
			<control type="grouplist">
				<top>800</top>
				<height>109</height>
				<itemgap>100</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<!-- Studio Flag -->
				<control type="image">
					<width>120</width>
					<height>80</height>
					<colordiffuse>ffffffff</colordiffuse>
					<aspectratio>keep</aspectratio>
					<texture fallback="flags/default_studio.png">$INFO[ListItem.Studio,flags/studios/,.png]</texture>
					<visible>!IsEmpty(ListItem.Studio)</visible>
				</control>
				<!-- MPAA Rating Flag -->
				<control type="image">
					<width>120</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
					<texture fallback="flags/default_rating.png">$VAR[Info_Certificate]</texture>
					<visible>!IsEmpty(ListItem.MPAA)</visible>
				</control>
				<!-- Source Flag -->
				<control type="image">
					<width>120</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
					<texture fallback="flags/default_source.png">$VAR[Video_Source]</texture>
					<visible>!IsEmpty(ListItem.FilenameAndPath)</visible>
				</control>
			</control>
		</control>
	</include>
</includes>