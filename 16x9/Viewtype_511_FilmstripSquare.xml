<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_511_FilmstripSquare">
		<control type="group">
			<visible>Control.IsVisible(511)</visible>
			<!-- List -->
			<control type="fixedlist" id="511">
				<width>1920</width>
				<height>1080</height>
				<onleft>511</onleft>
				<onright>511</onright>
				<onup>3000</onup>
				<ondown>60</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<focusposition>0</focusposition>
				<orientation>horizontal</orientation>
				<viewtype label="31113">list</viewtype>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<itemlayout height="1080" width="1080">
					<control type="image">
						<width>1080</width>
						<height>1080</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>1080</width>
						<height>1080</height>
						<texture>views/overlay_50.png</texture>
					</control>
				</itemlayout>
				<focusedlayout height="1080" width="1080">
					<control type="image">
						<width>1080</width>
						<height>1080</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>1080</width>
						<height>1080</height>
						<texture>views/overlay_50.png</texture>
						<animation center="auto" condition="Control.HasFocus(511)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
						<animation center="auto" condition="Control.HasFocus(511)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
					</control>
					<control type="image">
						<width>1080</width>
						<height>1080</height>
						<texture border="11">views/border.png</texture>
						<animation center="auto" condition="Control.HasFocus(511)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">Focus</animation>
						<animation center="auto" condition="Control.HasFocus(511)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">UnFocus</animation>
						<visible>!Control.HasFocus(3000) + !SubString(ListItem.Icon,default)</visible>
					</control>
				</focusedlayout>
			</control>
			<!-- Media Info -->
			<control type="group">
				<include>MediaInfoAnimation</include>
				<include>MediaInfoDiffuse</include>
				<control type="group">
					<left>1132</left>
					<width>738</width>
					<include>MediaInfo</include>
				</control>
			</control>
			<control type="group">
				<left>0</left>
				<top>0</top>
				<include>MediaInfoCondition</include>
				<control type="image">
					<width>1080</width>
					<height>1080</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="image">
					<width>1080</width>
					<height>1080</height>
					<texture border="11">views/border.png</texture>
				</control>
			</control>
		</control>
	</include>
</includes>