<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_521_RowSquare">
		<control type="group">
			<visible>Control.IsVisible(521)</visible>
			<!-- List -->
			<control type="fixedlist" id="521">
				<left>-440</left>
				<top>270</top>
				<width>2360</width>
				<height>540</height>
				<onleft>521</onleft>
				<onright>521</onright>
				<onup>3000</onup>
				<ondown>60</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<focusposition>1</focusposition>
				<orientation>horizontal</orientation>
				<viewtype label="31115">list</viewtype>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<itemlayout height="540" width="540">
					<control type="image">
						<width>540</width>
						<height>540</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>540</width>
						<height>540</height>
						<texture>views/overlay_50.png</texture>
					</control>
				</itemlayout>
				<focusedlayout height="540" width="540">
					<control type="image">
						<width>540</width>
						<height>540</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>540</width>
						<height>540</height>
						<texture>views/overlay_50.png</texture>
						<animation center="auto" condition="Control.HasFocus(521)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
						<animation center="auto" condition="Control.HasFocus(521)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
					</control>
					<control type="image">
						<width>540</width>
						<height>540</height>
						<texture border="11">views/border.png</texture>
						<animation center="auto" condition="Control.HasFocus(521)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">Focus</animation>
						<animation center="auto" condition="Control.HasFocus(521)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">UnFocus</animation>
						<visible>!Control.HasFocus(3000) + !SubString(ListItem.Icon,default)</visible>
					</control>
				</focusedlayout>
			</control>
			<!-- Media Info -->
			<control type="group">
				<include>MediaInfoAnimation</include>
				<include>MediaInfoDiffuse</include>
				<control type="group">
					<left>1010</left>
					<width>860</width>
					<include>MediaInfo</include>
				</control>
			</control>
			<control type="group">
				<left>100</left>
				<top>270</top>
				<include>MediaInfoCondition</include>
				<control type="image">
					<width>540</width>
					<height>540</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="image">
					<width>540</width>
					<height>540</height>
					<texture border="11">views/border.png</texture>
				</control>
			</control>
		</control>
	</include>
</includes>