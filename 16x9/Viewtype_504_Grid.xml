<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_504_Grid">
		<control type="group">
			<visible>Control.IsVisible(504)</visible>
			<control type="group">
				<include>FullscreenDimensions</include>
			</control>

			<!--On Previous Scroll Delay-->
			<control type="group" id="50401">
				<visible>Container(504).OnPrevious</visible>
				<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
			</control>

			<!--On Next Scroll Delay-->
			<control type="group" id="50402">
				<visible>Container(504).OnNext</visible>
				<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
			</control>

			<!-- List -->
			<control type="panel" id="504">
				<viewtype label="536">icon</viewtype>
				<top>0</top>
				<left>0</left>
				<width>1920</width>
				<height>1080</height>
				<onleft>3000</onleft>
				<onright>60</onright>
				<onup>504</onup>
				<ondown>504</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="31522">list</viewtype>
				<scrolltime tween="sine" easing="inout">380</scrolltime>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)</visible>
				<visible>[String.Contains(Container.FolderPath,videodb://) | String.Contains(Container.FolderPath,special://) | String.Contains(Container.FolderPath,addons://) | String.Contains(Container.FolderPath,musicdb://) | String.Contains(Container.FolderPath,androidapp://)]</visible>
				<!--Fanart with Title-->
				<itemlayout width="586" height="417" condition="[Skin.String(GridView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(GridView_Display)] + [!Skin.String(GridView_Details,Off) | String.IsEmpty(Skin.String(GridView_Details)]">
					<include>GridViewtItemLayout_Fanart</include>
				</itemlayout>
				<focusedlayout width="586" height="417" condition="[Skin.String(GridView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(GridView_Display)] + [!Skin.String(GridView_Details,Off) | String.IsEmpty(Skin.String(GridView_Details)]">
					<include>HiddenFocusButton</include>
					<include>GridViewFocusLayout_Fanart</include>
				</focusedlayout>

				<!--Fanart with No Titles-->
				<itemlayout width="586" height="347" condition="[Skin.String(GridView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(GridView_Display)] + Skin.String(GridView_Details,Off)">
					<include>GridViewtItemLayout_Fanart</include>
				</itemlayout>
				<focusedlayout width="594" height="356" condition="[Skin.String(GridView_Display,Fanart)| Container.Content(episodes) | String.IsEmpty(Skin.String(GridView_Display)] + Skin.String(GridView_Details,Off)">
					<include>HiddenFocusButton</include>
					<include>GridViewFocusLayout_Fanart</include>
				</focusedlayout>

				<!--Posters with Titles-->
				<itemlayout width="350" height="570"  condition="Skin.String(GridView_Display,Posters) + !Container.Content(episodes) + [!Skin.String(GridView_Details,Off) | String.IsEmpty(Skin.String(GridView_Details)]">
					<include>GridViewItemLayout_Posters</include>
				</itemlayout>
				<focusedlayout width="350" height="570" condition="Skin.String(GridView_Display,Posters) + !Container.Content(episodes) + [!Skin.String(GridView_Details,Off) | String.IsEmpty(Skin.String(GridView_Details)]">
					<include>HiddenFocusButton</include>
					<include>GridViewFocusLayout_Posters</include>
				</focusedlayout>

				<!--Poster with No Titles-->
				<itemlayout width="350" height="500" condition="Skin.String(GridView_Display,Posters) + !Container.Content(episodes) + Skin.String(GridView_Details,Off)">
					<include>GridViewItemLayout_Posters</include>
				</itemlayout>
				<focusedlayout width="350" height="500" condition="Skin.String(GridView_Display,Posters) + !Container.Content(episodes) + Skin.String(GridView_Details,Off)">
					<include>HiddenFocusButton</include>
					<include>GridViewFocusLayout_Posters</include>
				</focusedlayout>

			</control>
		</control>
	</include>
</includes>
