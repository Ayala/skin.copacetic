<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_505_Grid">
		<control type="group">
			<visible>Control.IsVisible(505)</visible>
			<control type="group">
				<include>FullscreenDimensions</include>
			</control>

			<!--Container-->
			<control type="panel" id="505">
				<viewtype label="536">icon</viewtype>
				<top>0</top>
				<left>0</left>
				<width>1830</width>
				<height>1118</height>
				<onleft>3000</onleft>
				<onright>60</onright>
				<onup>505</onup>
				<ondown>505</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="31522">list</viewtype>
				<scrolltime tween="sine" easing="inout">380</scrolltime>

				<animation effect="slide" end="543,313" time="0" reversible="false" condition="Integer.IsEqual(Container(505).NumItems,1) + [!Skin.String(GridView_Display,Posters) | Container.Content(episodes)]">Conditional</animation>
				<animation effect="slide" end="271,313" time="0" reversible="false" condition="Integer.IsEqual(Container(505).NumItems,2) + [!Skin.String(GridView_Display,Posters) | Container.Content(episodes)]">Conditional</animation>
				<animation effect="slide" end="0,313" time="0" reversible="false" condition="Integer.IsEqual(Container(505).NumItems,3) + [!Skin.String(GridView_Display,Posters) | Container.Content(episodes)]">Conditional</animation>
				<animation effect="slide" end="0,-10" time="0" reversible="false" condition="Integer.IsGreater(Container(505).NumItems,3) + [!Skin.String(GridView_Display,Posters) | Container.Content(episodes)] + [!Skin.String(GridView_Details,Off) | String.IsEmpty(Skin.String(GridView_Details)]">Conditional</animation>

				<animation effect="slide" end="620,233" time="0" reversible="false" condition="Integer.IsEqual(Container(505).NumItems,1) + Skin.String(GridView_Display,Posters) + !Container.Content(episodes)">Conditional</animation>
				<animation effect="slide" end="462,233" time="0" reversible="false" condition="Integer.IsEqual(Container(505).NumItems,2) + Skin.String(GridView_Display,Posters) + !Container.Content(episodes)">Conditional</animation>
				<animation effect="slide" end="305,233" time="0" reversible="false" condition="Integer.IsEqual(Container(505).NumItems,3) + Skin.String(Gridview_Display,Posters) + !Container.Content(episodes)">Conditional</animation>
				<animation effect="slide" end="147,233" time="0" reversible="false" condition="Integer.IsEqual(Container(505).NumItems,4) + Skin.String(Gridview_Display,Posters) + !Container.Content(episodes)">Conditional</animation>
				<animation effect="slide" end="0,233" time="0" reversible="false" condition="Integer.IsEqual(Container(505).NumItems,5) + Skin.String(Gridview_Display,Posters) + !Container.Content(episodes)">Conditional</animation>
				<animation effect="slide" end="0,-20" time="0" reversible="false" condition="Integer.IsGreater(Container(505).NumItems,5) + Skin.String(GridView_Display,Posters) + !Container.Content(episodes) + [!Skin.String(GridView_Details,Off) | String.IsEmpty(Skin.String(GridView_Details)]">Conditional</animation>

				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)</visible>
				<visible>[String.Contains(Container.FolderPath,videodb://) | String.Contains(Container.FolderPath,special://) | String.Contains(Container.FolderPath,addons://) | String.Contains(Container.FolderPath,musicdb://) | String.Contains(Container.FolderPath,androidapp://)]</visible>

				<!--Fanart with No Titles-->
				<itemlayout width="543" height="312" condition="[Skin.String(GridView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(GridView_Display)] + Skin.String(GridView_Details,Off)">
					<include>GridViewtItemLayout_Fanart</include>
				</itemlayout>
				<focusedlayout width="543" height="312" condition="[Skin.String(GridView_Display,Fanart)| Container.Content(episodes) | String.IsEmpty(Skin.String(GridView_Display)] + Skin.String(GridView_Details,Off)">
					<include>HiddenFocusButton</include>
					<include>GridViewFocusLayout_Fanart</include>
				</focusedlayout>

				<!--Fanart with Title-->
				<itemlayout width="543" height="442" condition="[Skin.String(GridView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(GridView_Display)] + [!Skin.String(GridView_Details,Off) | String.IsEmpty(Skin.String(GridView_Details)]">
					<include>GridViewtItemLayout_Fanart</include>
				</itemlayout>
				<focusedlayout width="543" height="442" condition="[Skin.String(GridView_Display,Fanart) | Container.Content(episodes) | String.IsEmpty(Skin.String(GridView_Display)] + [!Skin.String(GridView_Details,Off) | String.IsEmpty(Skin.String(GridView_Details)]">
					<include>HiddenFocusButton</include>
					<include>GridViewFocusLayout_Fanart</include>
				</focusedlayout>

				<!--Poster with No Titles-->
				<itemlayout width="315" height="465" condition="Skin.String(GridView_Display,Posters) + !Container.Content(episodes) + Skin.String(GridView_Details,Off)">
					<include>GridViewItemLayout_Posters</include>
				</itemlayout>
				<focusedlayout width="315" height="465" condition="Skin.String(GridView_Display,Posters) + !Container.Content(episodes) + Skin.String(GridView_Details,Off)">
					<include>HiddenFocusButton</include>
					<include>GridViewFocusLayout_Posters</include>
				</focusedlayout>

				<!--Posters with Titles-->
				<itemlayout width="315" height="595"  condition="Skin.String(GridView_Display,Posters) + !Container.Content(episodes) + [!Skin.String(GridView_Details,Off) | String.IsEmpty(Skin.String(GridView_Details)]">
					<include>GridViewItemLayout_Posters</include>
				</itemlayout>
				<focusedlayout width="315" height="595" condition="Skin.String(GridView_Display,Posters) + !Container.Content(episodes) + [!Skin.String(GridView_Details,Off) | String.IsEmpty(Skin.String(GridView_Details)]">
					<include>HiddenFocusButton</include>
					<include>GridViewFocusLayout_Posters</include>
				</focusedlayout>

			</control>
		</control>
	</include>
</includes>
