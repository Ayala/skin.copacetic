<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- progressdialog -->
	<defaultcontrol always="true">10</defaultcontrol>
	<controls>
		<!-- Hidden label -->
		<control type="label" id="1">
			<include>HiddenControl</include>
		</control>
		<!-- Main group -->
		<control type="group">
			<centertop>50%</centertop>
			<width>1920</width>
			<height>400</height>
			<!-- Background -->
			<control type="image">
				<width>1920</width>
				<height>400</height>
				<texture colordiffuse="$VAR[DiffuseColor]">views/white_90.png</texture>
			</control>
			<control type="group">
				<include name="DialogHeading">
					<param name="DialogHeaderId" value="-" />
					<param name="DialogHeaderLabel" value="$INFO[Control.GetLabel(1)] $INFO[System.Progressbar,- ,%]" />
				</include>
				<!-- Details -->
				<control type="textbox" id="9">
					<top>-40</top>
					<width>1280</width>
					<height>224</height>
					<font>Thin48</font>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
				</control>
			</control>
			<include name="DialogButtons">
				<param name="Button4Visible" value="false" />
				<param name="Button3Visible" value="false" />
				<param name="Button2Visible" value="false" />
				<!-- Cancel Button -->
				<param name="Button1ID" value="10" />
				<param name="Button1Label" value="$LOCALIZE[106]" />
				<param name="Button1Visible" value="true" />
			</include>
		</control>
	</controls>
</window>