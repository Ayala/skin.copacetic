<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_50_List">
		<control type="group">
			<visible>$EXP[ListView_IsVisible]</visible>
			<include>ViewModeFadeAnimation</include>
			<include>FullscreenDimensions</include>

			<!--Fanart background for 50,501-->
			<control type="group">
				<visible>$EXP[Background_IsFanart]</visible>
				<visible>!Control.IsVisible(941)</visible>
				<animation effect="fade" start="0" end="100" time="190" tween="sine" easing="out" reversible="false">Visible</animation>
				<control type="image">
					<texture colordiffuse="$VAR[DarkColor]">views/white_100.png</texture>
					</control>
				<include content="ListIcon">
						<param name="left" value="0"/>
						<param name="top" value="0"/>
						<param name="width" value="1920"/>
						<param name="height" value="1080"/>
						<param name="fadetime" value="300"/>
				</include>
				<include content="ViewtypeOverlay">
					<param name="visible" value="$EXP[ListView_IsVisible] | [$EXP[BillboardView_IsVisible] + !Skin.String(BillboardView_Details,Off)]"/>
				</include>
			</control>

			<!--Content - Display>Background-->
			<control type="group">
				<visible>$EXP[ListView_Display_IsBackground]</visible>
				<visible>!Control.IsVisible(5001) + !Control.IsVisible(5002)</visible>
				<visible>!$EXP[Dialog_IsVisible]</visible>
				<include>ContentFadeAnimation</include>
				<include>ProgressBarFadeAnimation</include>
				<!--Progress Bar-->
				<include content="ProgressBar"/>
				<!--Details-->
				<control type="grouplist">
					<left>120</left>
					<top>505</top>
					<height>70</height>
					<itemgap>10</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<visible>Skin.String(ListView_Details,TitleAndInfo) | String.IsEmpty(Skin.String(ListView_Details))</visible>
					<control type="label">
						<width max="1080">auto</width>
						<height>100%</height>
						<font>List_Title_Focused</font>
						<textcolor>$VAR[Blank]</textcolor>
						<label>$VAR[Title]</label>
					</control>
					<control type="label">
						<width>600</width>
						<top>27</top>
						<height>35</height>
						<font>Billboard_Info</font>
						<textcolor>$VAR[ListUnfocusColor]</textcolor>
						<label>$VAR[TitleInfo,/ ]</label>
						<scroll>true</scroll>
						<scrollsuffix></scrollsuffix>
					</control>
				</control>
			</control>

			<!---Transition background-->
			<control type="group">
				<visible>Control.IsVisible(5001) | Control.IsVisible(5002)</visible>
				<include>CustomViewsBackground</include>
				<control type="group">
					<visible>$EXP[Background_IsFanart]</visible>
					<include content="ListIcon">
						<param name="fadetime" value="300"/>
					</include>
					<include content="ViewtypeOverlay"/>
				</control>
			</control>

			<!--Content - Display>Fanart/Posters/Square-->
			<control type="group">
				<visible>!Control.IsVisible(941)</visible>
				<animation effect="fade" start="0" end="100" time="190" tween="sine" easing="out" reversible="false">Visible</animation>
				<control type="group">
					<!--Poster-->
					<include content="ListIcon">
						<param name="left" value="1320"/>
						<param name="top" value="180"/>
						<param name="width" value="480"/>
						<param name="height" value="720"/>
						<param name="fadetime" value="300"/>
						<param name="visible" value="$EXP[ListView_Display_IsPosters]"/>
					</include>
					<!--Progress Bar-->
					<control type="group">
						<animation effect="slide" end="600,-93" time="0" condition="$EXP[ListView_Display_IsPosters]">Conditional</animation>
						<include content="ProgressBar"/>
					</control>
				</control>
			</control>

			<!-- List -->
			<include content="ListViewTemplate"/>

		</control>
	</include>
</includes>
