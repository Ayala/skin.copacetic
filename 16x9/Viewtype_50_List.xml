<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_50_List">
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<include>FullscreenDimensions</include>
			<control type="group">
				<visible>!Skin.String(ListView_Fanart,Off)</visible>
				<include>Fanart</include>
				<include>ViewtypeOverlay</include>
			</control>

			<!--On Previous Scroll Delay-->
			<control type="group" id="5005">
				<visible>Container(50).OnPrevious</visible>
				<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
			</control>

			<!--On Next Scroll Delay-->
			<control type="group" id="5006">
				<visible>Container(50).OnNext</visible>
				<animation effect="slide" end="0,0" time="380" reversible="false">Hidden</animation>
			</control>

			<!-- List -->
			<control type="fixedlist" id="50">
				<viewtype label="535">list</viewtype>
				<left>100</left>
				<top>37</top>
				<width>1597</width>
				<height>1006</height>
				<onleft>3000</onleft>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				<focusposition>9</focusposition>
				<movement>0</movement>
				<orientation>vertical</orientation>
				<scrolltime tween="sine" easing="inout">380</scrolltime>
				<itemlayout height="52" width="1536">
					<control type="group">
						<include>HideContent</include>
						<control type="image">
							<left>2</left>
							<top>5</top>
							<width>29</width>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$VAR[PrimaryColor]">views/check_unfocused.png</texture>
							<visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
						</control>
						<control type="label">
							<left>61</left>
							<width>1536</width>
							<height>52</height>
							<aligny>center</aligny>
							<font>MediumListUnfocused</font>
							<textcolor>$VAR[PrimaryColor]</textcolor>
							<label>$VAR[Title]</label>
						</control>
					</control>
				</itemlayout>

				<focusedlayout height="70" width="1536">
					<include>HiddenFocusButton</include>
					<control type="group">
						<include>HideContent</include>
						<control type="image">
							<left>0</left>
							<top>9</top>
							<width>36</width>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$VAR[PrimaryColor]">views/check_focused.png</texture>
							<visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
						</control>
						<control type="fadelabel">
							<left>61</left>
							<width>1536</width>
							<height>100%</height>
							<aligny>center</aligny>
							<font>MediumListFocused</font>
							<textcolor>$VAR[ListFocusedColor]</textcolor>
							<label>$VAR[Title]</label>
							<scrollout>false</scrollout>
							<pauseatend>1000</pauseatend>
						</control>
					</control>
				</focusedlayout>
			</control>

				<!--Progress Bar
			<control type="group">
				<visible>!Control.IsVisible(5005) + !Control.IsVisible(5006)</visible>
				<include>ProgressBarFadeAnimation</include>
				<include content="ProgressBar">
					<param name="left" value="0"/>
					<param name="top" value="1072"/>
					<param name="width" value="1920"/>
					<param name="height" value="8"/>
				</include>
			</control>
		-->

			<control type="grouplist">
				<left>161</left>
				<top>505</top>
				<width>1536</width>
				<height>72</height>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<include>HideContent</include>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)</visible>
				<visible>!Control.IsVisible(5005) + !Control.IsVisible(5006) + [Skin.String(ListView_Details,TitleAndInfo) | String.IsEmpty(Skin.String(ListView_Details)]</visible>
				<include>ProgressBarFadeAnimation</include>
				<control type="label">
					<width>auto</width>
					<height>100%</height>
					<font>MediumListFocused</font>
					<textcolor>$VAR[Blank]</textcolor>
					<label>$VAR[Title]</label>
				</control>
				<control type="label">
					<width>auto</width>
					<top>18</top>
					<height>47</height>
					<font>MediumListDetails</font>
					<textcolor>$VAR[PrimaryColor]</textcolor>
					<label>/ $VAR[TitleInfo]</label>
				</control>
			</control>

		</control>
	</include>
</includes>
