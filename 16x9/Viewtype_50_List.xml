<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_50_List">
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<include>FullscreenDimensions</include>
			<!--Content-->
			<control type="group">
				<visible>!Control.IsVisible(5001) + !Control.IsVisible(5002)</visible>
				<include>ProgressBarFadeAnimation</include>
				<!--Progress Bar-->
				<include content="ProgressBar">
					<param name="left" value="800"/>
					<param name="top" value="1056"/>
				</include>
				<!--Details-->
				<control type="grouplist">
					<left>144</left>
					<top>510</top>
					<height>60</height>
					<itemgap>5</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<include>HideContent</include>
					<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)</visible>
					<visible>Skin.String(ListView_Details,TitleAndInfo) | String.IsEmpty(Skin.String(ListView_Details)</visible>
					<control type="label">
						<width>auto</width>
						<height>100%</height>
						<font>LargeFocused</font>
						<textcolor>$VAR[Blank]</textcolor>
						<label>$VAR[Title]</label>
					</control>
					<control type="label">
						<width>600</width>
						<top>14</top>
						<height>43</height>
						<font>MediumSubTitle</font>
						<textcolor>$VAR[LightColor]</textcolor>
						<label>$VAR[TitleInfo, / ]</label>
						<scroll>true</scroll>
						<scrollsuffix></scrollsuffix>
					</control>
				</control>
			</control>

			<!---Transition background-->
			<control type="group">
				<visible>Control.IsVisible(5001) | Control.IsVisible(5002)</visible>
				<visible>!Skin.String(ListView_Fanart,Off) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(artists)]</visible>
				<include content="ListIcon">
						<param name="fadetime" value="300"/>
				</include>
				<include>ViewtypeOverlay</include>
			</control>

			<!-- List -->
			<control type="fixedlist" id="50">
				<viewtype label="535">list</viewtype>
				<left>0</left>
				<top>94</top>
				<width>1219</width>
				<height>892</height>
				<onleft>3000</onleft>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				<focusposition>8</focusposition>
				<movement>0</movement>
				<orientation>vertical</orientation>
				<scrolltime tween="sine" easing="inout">380</scrolltime>
				<itemlayout height="52" width="1165">
					<include content="ListViewLayout"/>
				</itemlayout>
				<focusedlayout height="60" width="1165">
					<include>HiddenFocusButton</include>
					<include content="ListViewLayout">
						<param name="checkleft" value="54"/>
						<param name="checktop" value="18"/>
						<param name="checkwidth" value="36"/>
						<param name="checkheight" value="28"/>
						<param name="checktexture" value="views/check_focused.png"/>
						<param name="labeltype" value="label"/>
						<param name="labelleft" value="144"/>
						<param name="font" value="LargeFocused"/>
						<param name="textcolor" value="$VAR[ListFocusColor]"/>
						<param name="scroll" value="false"/>
					</include>
				</focusedlayout>
			</control>

		</control>
	</include>
</includes>
