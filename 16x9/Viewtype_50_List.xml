<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_50_List">
		<control type="group">
			<visible>$EXP[ListView_IsVisible]</visible>
			<include>ViewModeFadeAnimation</include>
			<include>FullscreenDimensions</include>

			<!--Content - Display/Background-->
			<control type="group">
				<visible>$EXP[ListView_Display_IsBackground]</visible>
				<visible>!Control.IsVisible(5001) + !Control.IsVisible(5002)</visible>
				<visible>!$EXP[Dialog_IsVisible]</visible>
				<include>ProgressBarFadeAnimation</include>
				<!--Progress Bar-->
				<include content="ProgressBar"/>
				<!--Details-->
				<control type="grouplist">
					<left>120</left>
					<top>505</top>
					<height>70</height>
					<itemgap>10</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<visible>Skin.String(ListView_Details,TitleAndInfo) | String.IsEmpty(Skin.String(ListView_Details))</visible>
					<control type="label">
						<width max="1080">auto</width>
						<height>100%</height>
						<font>List_Title_Focused</font>
						<textcolor>$VAR[Blank]</textcolor>
						<label>$VAR[Title]</label>
					</control>
					<control type="label">
						<width>600</width>
						<top>27</top>
						<height>35</height>
						<font>Billboard_Info</font>
						<textcolor>$VAR[ListUnfocusColor]</textcolor>
						<label>$VAR[TitleInfo,/ ]</label>
						<scroll>true</scroll>
						<scrollsuffix></scrollsuffix>
					</control>
				</control>
			</control>

			<!--Content - Details>Fanart/Posters/Square-->
			<control type="group">
				<visible>!$EXP[ListView_Display_IsBackground] + !Control.IsVisible(5001) + !Control.IsVisible(5002) + !$EXP[Dialog_IsVisible]</visible>
				<include>ProgressBarFadeAnimation</include>
					<control type="group">"
						<animation effect="slide" end="-600,-46" time="0" condition="$EXP[ListView_Display_IsPosters]">Conditional</animation>
						<animation effect="slide" end="-600,-166" time="0" condition="$EXP[ListView_Display_IsSquare]">Conditional</animation>
						<animation effect="slide" end="-600,-271" time="0" condition="$EXP[ListView_Display_IsFanart]">Conditional</animation>
						<include content="ProgressBar"/>
					</control>
					<control type="label">
						<animation effect="slide" end="0,-110" time="0" condition="$EXP[ListView_Display_IsSquare]">Conditional</animation>
						<animation effect="slide" end="0,-225" time="0" condition="$EXP[ListView_Display_IsFanart]">Conditional</animation>
						<visible>Skin.String(ListView_Details,TitleAndInfo) | String.IsEmpty(Skin.String(ListView_Details))</visible>
						<left>120</left>
						<top>926</top>
						<width>480</width>
						<height>35</height>
						<font>Billboard_Info</font>
						<textcolor>$VAR[ListUnfocusColor]</textcolor>
						<align>center</align>
						<label>$VAR[TitleInfo]</label>
						<scroll>true</scroll>
						<scrollsuffix>/</scrollsuffix>
					</control>
			</control>

			<!---Transition background-->
			<control type="group">
				<visible>Control.IsVisible(5001) | Control.IsVisible(5002)</visible>
				<include>CustomViewsBackground</include>
				<control type="group">
					<visible>$EXP[Background_IsFanart]</visible>
					<include content="ListIcon">
						<param name="fadetime" value="300"/>
					</include>
					<include content="ViewtypeOverlay"/>
				</control>
			</control>

			<!--Content - Display>Fanart/Posters/Square-->
			<control type="group">
				<visible>!Control.IsVisible(941) + !$EXP[ListView_Display_IsBackground]</visible>
				<animation effect="fade" start="0" end="100" time="190" tween="sine" easing="out" reversible="false">Visible</animation>
				<control type="group">
					<!--Fanart-->
					<include content="ListIcon">
						<param name="left" value="120"/>
						<param name="top" value="405"/>
						<param name="width" value="480"/>
						<param name="height" value="270"/>
						<param name="fadetime" value="300"/>
						<param name="visible" value="$EXP[ListView_Display_IsFanart]"/>
					</include>
					<!--Poster-->
					<include content="ListIcon">
						<param name="left" value="120"/>
						<param name="top" value="180"/>
						<param name="width" value="480"/>
						<param name="height" value="720"/>
						<param name="fadetime" value="300"/>
						<param name="visible" value="$EXP[ListView_Display_IsPosters]"/>
					</include>
					<!--Square-->
					<include content="ListIcon">
						<param name="left" value="120"/>
						<param name="top" value="300"/>
						<param name="width" value="480"/>
						<param name="height" value="480"/>
						<param name="fadetime" value="300"/>
						<param name="visible" value="$EXP[ListView_Display_IsSquare]"/>
					</include>
				</control>
			</control>

			<!-- List -->
			<control type="group">
				<animation effect="slide" end="600,0" time="0" condition="!$EXP[ListView_Display_IsBackground]">Conditional</animation>
				<include content="ListViewTemplate"/>
			</control>
		</control>
	</include>
</includes>
