<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_50_List">
		<control type="group">
			<include>FullscreenDimensions</include>

			<!--Static Content-->
			<control type="group">
				<visible>$EXP[ListView_IsVisible]</visible>
				<include>ViewmodeCyclingAnimation</include>
				<control type="group">
					<visible>!$EXP[ContainerCycling]</visible>
					<include>ViewmodeCyclingAnimation</include>
					<control type="group">
						<visible>!$EXP[ContentCycling]</visible>
						<control type="group">
							<visible>!Control.IsVisible(941)</visible>
							<animation effect="fade" start="0" end="100" time="190" tween="sine" easing="out" reversible="false">Visible</animation>
							<include>CustomViewsBackground</include>
							<!--Display_IsThumbnail-->
							<include content="SimpleListIcon">
								<param name="left" value="60"/>
								<param name="top" value="135"/>
								<param name="width" value="540"/>
								<param name="height" value="810"/>
								<param name="aspectratio" value="keep"/>
								<param name="visible" value="$EXP[ListView_Display_IsThumbnails] + !Container.Content(actors)"/>
							</include>
							<include content="SimpleListIcon">
								<param name="left" value="60"/>
								<param name="top" value="135"/>
								<param name="width" value="540"/>
								<param name="height" value="810"/>
								<param name="aspectratio" value="scale"/>
								<param name="visible" value="$EXP[ListView_Display_IsThumbnails] + Container.Content(actors)"/>
							</include>
							<!--Display_IsBackground-->
							<control type="group">
								<visible>$EXP[ListView_Display_IsBackground] + !String.IsEmpty(ListItem.Art(fanart))</visible>
								<include content="SimpleListIcon">
									<param name="left" value="0"/>
									<param name="top" value="0"/>
									<param name="width" value="1920"/>
									<param name="height" value="1080"/>
									<param name="fadetime" value="380"/>
								</include>
								<include content="ViewtypeOverlay"/>
							</control>
						</control>
					</control>
					<control type="group">
						<visible>!$EXP[ContentCycling]</visible>
						<visible>!$EXP[Dialog_IsVisible]</visible>
						<include>ProgressBarFadeAnimation</include>
						<!--MediaFlags-->
						<include>MediaFlags</include>
						<!--ProgressBar-->
						<include content="ProgressBar"/>
						<!--Details for Display_IsThumbnails-->
						<control type="textbox">
							<!--Videos falling back to 16:9 artwork-->
							<animation effect="slide" end="0,-253" time="0" condition="[[Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)] + String.IsEmpty(ListItem.Art(poster)] | Container.Content(episodes)">Conditional</animation>
							<!--Videos falling back to 1.33 thumb-->
							<animation effect="slide" end="0,-203" time="0" condition="Window.IsActive(videos) + String.IsEmpty(ListItem.Art(poster) + String.IsEmpty(ListItem.Art(fanart) + String.Contains(ListItem.Icon,image://) + String.IsEqual(ListItem.VideoAspect,1.33)">Conditional</animation>
							<!--Videos falling back to 1.37 thumb-->
							<animation effect="slide" end="0,-208" time="0" condition="Window.IsActive(videos) + String.IsEmpty(ListItem.Art(poster) + String.IsEmpty(ListItem.Art(fanart) + String.Contains(ListItem.Icon,image://) + String.IsEqual(ListItem.VideoAspect,1.37)">Conditional</animation>
							<!--Videos falling back to 1.66 thumb-->
							<animation effect="slide" end="0,-243" time="0" condition="Window.IsActive(videos) + String.IsEmpty(ListItem.Art(poster) + String.IsEmpty(ListItem.Art(fanart) + String.Contains(ListItem.Icon,image://) + String.IsEqual(ListItem.VideoAspect,1.66)">Conditional</animation>
							<!--Videos falling back to 1.78 thumb-->
							<animation effect="slide" end="0,-253" time="0" condition="Window.IsActive(videos) + String.IsEmpty(ListItem.Art(poster) + String.IsEmpty(ListItem.Art(fanart) + String.Contains(ListItem.Icon,image://) + String.IsEqual(ListItem.VideoAspect,1.78)">Conditional</animation>
							<!--Videos falling back to 1.85 thumb-->
							<animation effect="slide" end="0,-259" time="0" condition="Window.IsActive(videos) + String.IsEmpty(ListItem.Art(poster) + String.IsEmpty(ListItem.Art(fanart) + String.Contains(ListItem.Icon,image://) + String.IsEqual(ListItem.VideoAspect,1.85)">Conditional</animation>
							<!--Videos falling back to 2.35 thumb-->
							<animation effect="slide" end="0,-290" time="0" condition="Window.IsActive(videos) + String.IsEmpty(ListItem.Art(poster) + String.IsEmpty(ListItem.Art(fanart) + String.Contains(ListItem.Icon,image://) + String.IsEqual(ListItem.VideoAspect,2.35)">Conditional</animation>
							<!--Videos falling back to 2.40 thumb-->
							<animation effect="slide" end="0,-293" time="0" condition="Window.IsActive(videos) + String.IsEmpty(ListItem.Art(poster) + String.IsEmpty(ListItem.Art(fanart) + String.Contains(ListItem.Icon,image://) + String.IsEqual(ListItem.VideoAspect,2.4)">Conditional</animation>
							<!--Videos falling back to blank aspect ratio-->
							<animation effect="slide" end="0,-253" time="0" condition="Window.IsActive(videos) + String.IsEmpty(ListItem.Art(poster) + String.IsEmpty(ListItem.Art(fanart) + String.Contains(ListItem.Icon,image://) + String.IsEmpty(ListItem.VideoAspect)">Conditional</animation>
							<!--Music falling back to 1:1 artwork-->
							<animation effect="slide" end="0,-135" time="0" condition="[Container.Content(artists) | Container.Content(albums) | Container.Content(songs)] + !String.Contains(ListItem.Icon,Default)">Conditional</animation>
							<!--Music falling back to 16:9 artwork-->
							<animation effect="slide" end="0,-253" time="0" condition="[Container.Content(artists) | Container.Content(albums) | Container.Content(songs)] + String.Contains(ListItem.Icon,Default)">Conditional</animation>
							<visible>$EXP[ListView_Display_IsThumbnails] + $EXP[ListView_Details_Info_IsVisible]</visible>
							<visible>!$EXP[Dialog_IsVisible]</visible>
							<left>60</left>
							<top>975</top>
							<width>540</width>
							<height>auto</height>
							<font>Billboard_Info</font>
							<textcolor>$VAR[ListUnfocusColor]</textcolor>
							<align>center</align>
							<label>$VAR[TitleInfo]</label>
						</control>
						<!--Details for Display_IsBackground-->
						<control type="grouplist">
							<left>120</left>
							<top>505</top>
							<height>70</height>
							<itemgap>10</itemgap>
							<orientation>horizontal</orientation>
							<usecontrolcoords>true</usecontrolcoords>
							<visible>$EXP[ListView_Display_IsBackground] + $EXP[ListView_Details_Info_IsVisible]</visible>
							<control type="label">
								<width max="1080">auto</width>
								<height>100%</height>
								<font>List_Title_Focused</font>
								<textcolor>$VAR[Blank]</textcolor>
								<label>$VAR[Title]</label>
							</control>
							<control type="label">
								<width>600</width>
								<top>27</top>
								<height>35</height>
								<font>LIST_Info</font>
								<textcolor>$VAR[ListUnfocusColor]</textcolor>
								<label>$VAR[TitleInfo, / ]</label>
								<scroll>true</scroll>
								<scrollsuffix></scrollsuffix>
							</control>
						</control>
					</control>
				</control>
			</control>

			<!--List & Scrolling-->
			<control type="group">
				<visible>$EXP[ListView_IsVisible]</visible>
				<include>ViewmodeCyclingAnimation</include>
				<control type="group">
					<visible>!$EXP[ContainerCycling]</visible>
					<include>ViewmodeCyclingAnimation</include>
					<control type="group">
						<visible>$EXP[ContentCycling]</visible>
						<include>CustomViewsBackground</include>
						<!--Display_IsThumbnail-->
						<include content="ListIcon">
							<param name="left" value="60"/>
							<param name="top" value="135"/>
							<param name="width" value="540"/>
							<param name="height" value="810"/>
							<param name="aspectratio" value="keep"/>
							<param name="visible" value="$EXP[ListView_Display_IsThumbnails] + !Container.Content(actors)"/>
						</include>
						<include content="SimpleListIcon">
							<param name="left" value="60"/>
							<param name="top" value="135"/>
							<param name="width" value="540"/>
							<param name="height" value="810"/>
							<param name="aspectratio" value="scale"/>
							<param name="visible" value="$EXP[ListView_Display_IsThumbnails] + Container.Content(actors)"/>
						</include>
						<!---Display_IsBackground-->
						<control type="group">
							<visible>$EXP[ListView_Display_IsBackground] + !String.IsEmpty(ListItem.Art(fanart))</visible>
							<include content="SimpleListIcon">
								<param name="left" value="0"/>
								<param name="top" value="0"/>
								<param name="width" value="1920"/>
								<param name="height" value="1080"/>
								<param name="fadetime" value="380"/>
							</include>
							<include content="ViewtypeOverlay"/>
						</control>
					</control>
					<!-- List -->
					<control type="group">
						<animation effect="slide" end="600,0" time="0" condition="$EXP[ListView_Display_IsThumbnails]">Conditional</animation>
						<include content="ListViewTemplate"/>
					</control>
				</control>
			</control>

		</control>
	</include>
</includes>
